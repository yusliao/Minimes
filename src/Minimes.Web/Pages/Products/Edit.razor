@page "/products/edit/{id:int}"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "Operator")]
@using Minimes.Application.Interfaces
@using Minimes.Application.DTOs.Product
@using Minimes.Application.Resources
@using Microsoft.Extensions.Localization
@inject IProductService ProductService
@inject NavigationManager NavigationManager
@inject IStringLocalizer<SharedResource> Localizer

<PageTitle>@Localizer["Product_EditTitle"] - @Localizer["AppName"]</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>
                <span class="oi oi-pencil me-2"></span>@Localizer["Product_EditTitle"]
            </h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/products">@Localizer["Product_Title"]</a></li>
                    <li class="breadcrumb-item active">@Localizer["Product_EditTitle"]</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">@Localizer["Status_Loading"]</span>
            </div>
            <p class="mt-2 text-muted">@Localizer["Product_LoadingData"]</p>
        </div>
    }
    else if (product == null)
    {
        <div class="alert alert-danger">
            <span class="oi oi-warning me-2"></span>
            @Localizer["Product_NotFound"]
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <EditForm Model="request" OnValidSubmit="HandleSubmit">
                            <DataAnnotationsValidator />

                            <div class="mb-3">
                                <label class="form-label">
                                    <strong>@Localizer["Product_BarcodeRequired"]</strong>
                                    <span class="badge bg-secondary ms-2">@Localizer["Product_BarcodeCannotEdit"]</span>
                                </label>
                                <input type="text" class="form-control" value="@product.Barcode" disabled />
                                <small class="form-text text-muted">
                                    @Localizer["Product_BarcodeCannotEditNote"]
                                </small>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">
                                    <strong>@Localizer["Product_NameRequired"]</strong>
                                </label>
                                <input type="text" class="form-control" @bind="request.Name" required />
                                <ValidationMessage For="@(() => request.Name)" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">
                                    @Localizer["Product_SpecificationLabel"]
                                </label>
                                <textarea class="form-control" @bind="request.Specification" rows="3"></textarea>
                                <ValidationMessage For="@(() => request.Specification)" />
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">@Localizer["Product_UnitLabel"]</label>
                                    <input type="text" class="form-control" @bind="request.Unit" />
                                    <ValidationMessage For="@(() => request.Unit)" />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label">
                                        @Localizer["Product_ReferencePriceOptional"]
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text">¥</span>
                                        <input type="number" step="0.01" class="form-control" @bind="request.ReferencePrice" />
                                    </div>
                                    <ValidationMessage For="@(() => request.ReferencePrice)" />
                                </div>
                            </div>

                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="isActive" @bind="request.IsActive" />
                                <label class="form-check-label" for="isActive">
                                    @Localizer["Product_ActiveCheckbox"]
                                </label>
                            </div>

                            <hr class="my-4" />

                            <div class="d-flex justify-content-between">
                                <button type="button" class="btn btn-outline-secondary" @onclick="Cancel">
                                    <span class="oi oi-x me-1"></span>@Localizer["Btn_Cancel"]
                                </button>
                                <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                    @if (isSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-1"></span>
                                        <span>@Localizer["Product_Saving"]</span>
                                    }
                                    else
                                    {
                                        <span class="oi oi-check me-1"></span>
                                        <span>@Localizer["Product_SaveChanges"]</span>
                                    }
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>

            <!-- 右侧批次信息 -->
            <div class="col-md-4">
                <div class="card bg-light">
                    <div class="card-body">
                        <h5 class="card-title">
                            <span class="oi oi-info me-2"></span>@Localizer["Product_InfoTitle"]
                        </h5>
                        <dl class="row mb-0">
                            <dt class="col-sm-5">@Localizer["Product_CreatedAt"]</dt>
                            <dd class="col-sm-7">@product.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>

                            @if (product.UpdatedAt.HasValue)
                            {
                                <dt class="col-sm-5">@Localizer["Product_UpdatedAt"]</dt>
                                <dd class="col-sm-7">@product.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm")</dd>
                            }

                            <dt class="col-sm-5">@Localizer["Product_CurrentStatus"]</dt>
                            <dd class="col-sm-7">
                                @if (product.IsActive)
                                {
                                    <span class="badge bg-success">@Localizer["Product_Activated"]</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@Localizer["Product_Disabled"]</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>

                <div class="card bg-light mt-3">
                    <div class="card-body">
                        <h6 class="card-title">
                            <span class="oi oi-warning me-1"></span>@Localizer["Product_NoticeTitle"]
                        </h6>
                        <ul class="small mb-0">
                            <li>@Localizer["Product_Notice1"]</li>
                            <li>@Localizer["Product_Notice2"]</li>
                            <li>@Localizer["Product_Notice3"]</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private ProductResponse? product;
    private UpdateProductRequest request = new();
    private bool isLoading = true;
    private bool isSaving = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadProduct();
    }

    private async Task LoadProduct()
    {
        isLoading = true;
        try
        {
            product = await ProductService.GetByIdAsync(Id);
            if (product != null)
            {
                // 映射到编辑请求对象
                request.Id = product.Id;
                request.Name = product.Name;
                request.Specification = product.Specification;
                request.Unit = product.Unit;
                request.ReferencePrice = product.ReferencePrice;
                request.IsActive = product.IsActive;
            }
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        isSaving = true;
        try
        {
            request.Id = Id;  // 确保ID被正确设置
            await ProductService.UpdateAsync(request);
            NavigationManager.NavigateTo("/products");
        }
        catch (Exception ex)
        {
            // TODO: 显示错误消息
            Console.WriteLine($"保存失败: {ex.Message}");
        }
        finally
        {
            isSaving = false;
        }
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/products");
    }
}
