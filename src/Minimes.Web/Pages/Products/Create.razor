@page "/products/create"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "Operator")]
@using Minimes.Application.Interfaces
@using Minimes.Application.DTOs.Product
@inject IProductService ProductService
@inject NavigationManager NavigationManager

<PageTitle>新增批次 - MiniMES</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>
                <span class="oi oi-plus me-2"></span>新增批次
            </h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/products">批次管理</a></li>
                    <li class="breadcrumb-item active">新增批次</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <EditForm Model="request" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label class="form-label">
                                <strong>二维码 *</strong>
                                <small class="text-muted">（扫码枪扫描或手动输入）</small>
                            </label>
                            <input type="text" class="form-control form-control-lg" @bind="request.Barcode"
                                   placeholder="例如：PORK2026010701" required />
                            <ValidationMessage For="@(() => request.Barcode)" />
                            <small class="form-text text-muted">
                                供应商提供的批次二维码，必须唯一
                            </small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <strong>批次名称 *</strong>
                            </label>
                            <input type="text" class="form-control" @bind="request.Name"
                                   placeholder="例如：猪肉批次-20260107-001" required />
                            <ValidationMessage For="@(() => request.Name)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                供应商/规格说明
                            </label>
                            <textarea class="form-control" @bind="request.Specification" rows="3"
                                      placeholder="例如：供应商: 张三肉联厂"></textarea>
                            <ValidationMessage For="@(() => request.Specification)" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">单位</label>
                                <input type="text" class="form-control" @bind="request.Unit"
                                       placeholder="例如：千克、克、件" />
                                <ValidationMessage For="@(() => request.Unit)" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    参考价格（可选）
                                    <small class="text-muted">（生产管理场景可不填）</small>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">¥</span>
                                    <input type="number" step="0.01" class="form-control" @bind="request.ReferencePrice"
                                           placeholder="0.00" />
                                </div>
                                <ValidationMessage For="@(() => request.ReferencePrice)" />
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="isActive" @bind="request.IsActive" />
                            <label class="form-check-label" for="isActive">
                                激活状态（勾选后批次可用于生产）
                            </label>
                        </div>

                        <hr class="my-4" />

                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-outline-secondary" @onclick="Cancel">
                                <span class="oi oi-x me-1"></span>取消
                            </button>
                            <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                    <span>保存中...</span>
                                }
                                else
                                {
                                    <span class="oi oi-check me-1"></span>
                                    <span>保存</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>

        <!-- 右侧帮助信息 -->
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title">
                        <span class="oi oi-info me-2"></span>填写说明
                    </h5>
                    <ul class="mb-0">
                        <li class="mb-2">
                            <strong>二维码</strong>：供应商提供的批次标识，扫码枪扫描后自动填充
                        </li>
                        <li class="mb-2">
                            <strong>批次名称</strong>：便于识别的批次名称，建议格式：品类-日期-序号
                        </li>
                        <li class="mb-2">
                            <strong>供应商/规格</strong>：记录供应商信息，方便质量追溯
                        </li>
                        <li class="mb-2">
                            <strong>单位</strong>：常用单位有：千克、克、件、箱等
                        </li>
                        <li class="mb-2">
                            <strong>参考价格</strong>：生产管理场景可不填，仅供参考
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private CreateProductRequest request = new()
    {
        IsActive = true // 默认激活
    };
    private bool isSaving = false;

    private async Task HandleSubmit()
    {
        isSaving = true;
        try
        {
            await ProductService.CreateAsync(request);
            NavigationManager.NavigateTo("/products");
        }
        catch (Exception ex)
        {
            // TODO: 显示错误消息
            Console.WriteLine($"保存失败: {ex.Message}");
        }
        finally
        {
            isSaving = false;
        }
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/products");
    }
}
