@page "/products/create"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "Operator")]
@using Minimes.Application.Interfaces
@using Minimes.Application.DTOs.Product
@using Minimes.Application.Resources
@using Microsoft.Extensions.Localization
@inject IProductService ProductService
@inject NavigationManager NavigationManager
@inject IStringLocalizer<SharedResource> Localizer

<PageTitle>@Localizer["Product_CreateTitle"] - @Localizer["AppName"]</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>
                <span class="oi oi-plus me-2"></span>@Localizer["Product_CreateTitle"]
            </h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/products">@Localizer["Product_Title"]</a></li>
                    <li class="breadcrumb-item active">@Localizer["Product_CreateTitle"]</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <EditForm Model="request" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label class="form-label">
                                <strong>@Localizer["Product_BarcodeRequired"]</strong>
                                <small class="text-muted">@Localizer["Product_BarcodeScanHint"]</small>
                            </label>
                            <input type="text" class="form-control form-control-lg" @bind="request.Barcode"
                                   placeholder="@Localizer["Product_BarcodePlaceholder"]" required />
                            <ValidationMessage For="@(() => request.Barcode)" />
                            <small class="form-text text-muted">
                                @Localizer["Product_BarcodeUnique"]
                            </small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <strong>@Localizer["Product_NameRequired"]</strong>
                            </label>
                            <input type="text" class="form-control" @bind="request.Name"
                                   placeholder="@Localizer["Product_NamePlaceholder"]" required />
                            <ValidationMessage For="@(() => request.Name)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                @Localizer["Product_SpecificationLabel"]
                            </label>
                            <textarea class="form-control" @bind="request.Specification" rows="3"
                                      placeholder="@Localizer["Product_SpecificationPlaceholder"]"></textarea>
                            <ValidationMessage For="@(() => request.Specification)" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">@Localizer["Product_UnitLabel"]</label>
                                <input type="text" class="form-control" @bind="request.Unit"
                                       placeholder="@Localizer["Product_UnitPlaceholder"]" />
                                <ValidationMessage For="@(() => request.Unit)" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    @Localizer["Product_ReferencePriceOptional"]
                                    <small class="text-muted">@Localizer["Product_ReferencePriceNote"]</small>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">¥</span>
                                    <input type="number" step="0.01" class="form-control" @bind="request.ReferencePrice"
                                           placeholder="0.00" />
                                </div>
                                <ValidationMessage For="@(() => request.ReferencePrice)" />
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="isActive" @bind="request.IsActive" />
                            <label class="form-check-label" for="isActive">
                                @Localizer["Product_ActiveCheckbox"]
                            </label>
                        </div>

                        <hr class="my-4" />

                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-outline-secondary" @onclick="Cancel">
                                <span class="oi oi-x me-1"></span>@Localizer["Btn_Cancel"]
                            </button>
                            <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                    <span>@Localizer["Product_Saving"]</span>
                                }
                                else
                                {
                                    <span class="oi oi-check me-1"></span>
                                    <span>@Localizer["Product_Save"]</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>

        <!-- 右侧帮助信息 -->
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title">
                        <span class="oi oi-info me-2"></span>@Localizer["Product_HelpTitle"]
                    </h5>
                    <ul class="mb-0">
                        <li class="mb-2">
                            @Localizer["Product_HelpBarcode"]
                        </li>
                        <li class="mb-2">
                            @Localizer["Product_HelpName"]
                        </li>
                        <li class="mb-2">
                            @Localizer["Product_HelpSpecification"]
                        </li>
                        <li class="mb-2">
                            @Localizer["Product_HelpUnit"]
                        </li>
                        <li class="mb-2">
                            @Localizer["Product_HelpReferencePrice"]
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private CreateProductRequest request = new()
    {
        IsActive = true // 默认激活
    };
    private bool isSaving = false;

    private async Task HandleSubmit()
    {
        isSaving = true;
        try
        {
            await ProductService.CreateAsync(request);
            NavigationManager.NavigateTo("/products");
        }
        catch (Exception ex)
        {
            // TODO: 显示错误消息
            Console.WriteLine($"保存失败: {ex.Message}");
        }
        finally
        {
            isSaving = false;
        }
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/products");
    }
}
