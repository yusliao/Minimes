@page "/qrcodes/edit/{id:int}"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "Admin")]
@using Microsoft.Extensions.Localization
@using Minimes.Application.Interfaces
@using Minimes.Application.DTOs.QRCode
@using Minimes.Application.Resources
@inject IStringLocalizer<SharedResource> L
@inject IQRCodeService QRCodeService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>@L["QRCodes_EditTitle"] - MiniMES</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>
                <span class="oi oi-pencil me-2"></span>@L["QRCodes_EditTitle"]
            </h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/qrcodes">@L["QRCodes_Title"]</a></li>
                    <li class="breadcrumb-item active">@L["Breadcrumb_Edit"]</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">@L["Status_Loading"]</span>
            </div>
            <p class="text-muted mt-2">@L["QRCodes_LoadingInfo"]</p>
        </div>
    }
    else if (qrCode == null)
    {
        <div class="alert alert-warning">
            <span class="oi oi-warning me-2"></span>@L["QRCodes_NotFoundMessage"]
        </div>
    }
    else
    {
        <div class="row">
            <!-- 左侧表单 -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">@L["QRCodes_BasicInfo"]</h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <strong>@L["Message_Error"]</strong> @errorMessage
                                <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
                            </div>
                        }

                        <!-- 只读信息 -->
                        <div class="mb-3">
                            <label class="form-label">@L["QRCodes_Id"]</label>
                            <input type="text" class="form-control" value="@qrCode.Id" readonly />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">@L["QRCodes_CodeLabel"]</label>
                            <input type="text" class="form-control" value="@qrCode.Code" readonly />
                            <div class="form-text">@L["QRCodes_CodeReadonly"]</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">@L["QRCodes_MeatTypeLabel"]</label>
                            <input type="text" class="form-control" value="@qrCode.MeatTypeName (@qrCode.MeatTypeCode)" readonly />
                            <div class="form-text">@L["QRCodes_MeatTypeReadonly"]</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">@L["QRCodes_ContentLabel"]</label>
                            <input type="text" class="form-control" value="@qrCode.Content" readonly />
                            <div class="form-text">@L["QRCodes_ContentReadonly"]</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">@L["QRCodes_BatchNumberLabel"]</label>
                            <input type="text" class="form-control" value="@(qrCode.BatchNumber ?? "-")" readonly />
                            <div class="form-text">@L["QRCodes_BatchNumberReadonly"]</div>
                        </div>

                        <!-- 可编辑字段 -->
                        <div class="mb-3">
                            <label class="form-label">@L["QRCodes_StatusLabel"]</label>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="isActiveSwitch" @bind="request.IsActive" />
                                <label class="form-check-label" for="isActiveSwitch">
                                    @if (request.IsActive)
                                    {
                                        <span class="badge bg-success">@L["Status_Active"]</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@L["Status_Inactive"]</span>
                                    }
                                </label>
                            </div>
                            <div class="form-text">@L["QRCodes_StatusHint"]</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">@L["QRCodes_RemarksLabel"]</label>
                            <textarea class="form-control" @bind="request.Remarks" rows="3"
                                      placeholder="@L["QRCodes_RemarksPlaceholder"]" maxlength="500"></textarea>
                            <div class="form-text">@L["QRCodes_RemarksHint"]</div>
                        </div>

                        <div class="d-flex gap-2">
                            <button class="btn btn-primary" @onclick="SaveChanges" disabled="@isSaving">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                    <span>@L["Btn_Saving"]</span>
                                }
                                else
                                {
                                    <span class="oi oi-check me-1"></span>
                                    <span>@L["Btn_Save"]</span>
                                }
                            </button>
                            <button class="btn btn-secondary" @onclick="Cancel">
                                <span class="oi oi-x me-1"></span>@L["Btn_Cancel"]
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 右侧信息 -->
            <div class="col-md-4">
                <!-- 二维码图片 -->
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">@L["QRCodes_ImageTitle"]</h5>
                    </div>
                    <div class="card-body text-center">
                        @if (!string.IsNullOrEmpty(qrCode.ImageBase64))
                        {
                            <img src="data:image/png;base64,@qrCode.ImageBase64"
                                 alt="QR Code"
                                 class="img-fluid mb-2"
                                 style="max-width: 200px;" />
                            <p class="text-muted small mb-0">@qrCode.Content</p>
                        }
                        else
                        {
                            <div class="text-muted py-3">
                                <span class="oi oi-qrcode" style="font-size: 48px;"></span>
                                <p class="mt-2">@L["QRCodes_NoImage"]</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- 使用统计 -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">@L["QRCodes_UsageStatistics"]</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label text-muted">@L["QRCodes_PrintCountLabel"]</label>
                            <h4 class="mb-0">@qrCode.PrintCount @L["QRCodes_Times"]</h4>
                        </div>

                        @if (qrCode.LastPrintedAt.HasValue)
                        {
                            <div class="mb-3">
                                <label class="form-label text-muted">@L["QRCodes_LastPrintedAt"]</label>
                                <p class="mb-0">@qrCode.LastPrintedAt.Value.ToString("yyyy-MM-dd HH:mm:ss")</p>
                            </div>
                        }

                        <div class="mb-0">
                            <label class="form-label text-muted">@L["QRCodes_CreatedAt"]</label>
                            <p class="mb-0">@qrCode.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private QRCodeResponse? qrCode;
    private UpdateQRCodeRequest request = new();
    private string errorMessage = string.Empty;
    private bool isLoading = true;
    private bool isSaving = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            qrCode = await QRCodeService.GetByIdAsync(Id);
            if (qrCode != null)
            {
                // 初始化编辑请求
                request.Code = qrCode.Code;
                request.IsActive = qrCode.IsActive;
                request.Remarks = qrCode.Remarks;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"{L["QRCodes_LoadFailed"].Value} {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task SaveChanges()
    {
        errorMessage = string.Empty;
        isSaving = true;

        try
        {
            await QRCodeService.UpdateAsync(Id, request);
            Navigation.NavigateTo("/qrcodes");
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isSaving = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/qrcodes");
    }
}
