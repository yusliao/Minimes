@page "/qrcodes/batch-create"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "Admin")]
@using Microsoft.Extensions.Localization
@using Minimes.Application.Interfaces
@using Minimes.Application.DTOs.QRCode
@using Minimes.Application.DTOs.MeatType
@using Minimes.Application.Resources
@inject IStringLocalizer<SharedResource> L
@inject IQRCodeService QRCodeService
@inject IMeatTypeService MeatTypeService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>@L["QRCodes_BatchCreateTitle"] - MiniMES</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>
                <span class="oi oi-layers me-2"></span>@L["QRCodes_BatchCreateTitle"]
            </h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/qrcodes">@L["QRCodes_Title"]</a></li>
                    <li class="breadcrumb-item active">@L["QRCodes_BatchCreate"]</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <!-- 左侧表单 -->
        <div class="col-md-7">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">@L["QRCodes_BatchCreateParams"]</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>@L["Message_Error"]</strong> @errorMessage
                            <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong>@L["Message_Success"]</strong> @successMessage
                            <button type="button" class="btn-close" @onclick="() => successMessage = string.Empty"></button>
                        </div>
                    }

                    <div class="mb-3">
                        <label class="form-label">@L["QRCodes_MeatTypeLabel"] <span class="text-danger">*</span></label>
                        <select class="form-select" @bind="request.MeatTypeId" @bind:after="OnParameterChanged">
                            <option value="0">@L["QRCodes_SelectMeatType"]</option>
                            @foreach (var meatType in meatTypes)
                            {
                                <option value="@meatType.Id">@meatType.Name (@meatType.Code)</option>
                            }
                        </select>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@L["QRCodes_StartNumber"] <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" @bind="request.StartNumber" @bind:after="OnParameterChanged"
                                   min="1" placeholder="@L["QRCodes_StartNumberPlaceholder"]" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@L["QRCodes_EndNumber"] <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" @bind="request.EndNumber" @bind:after="OnParameterChanged"
                                   min="1" placeholder="@L["QRCodes_EndNumberPlaceholder"]" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@L["QRCodes_Prefix"]</label>
                            <input type="text" class="form-control" @bind="request.Prefix" @bind:after="OnParameterChanged"
                                   placeholder="@L["QRCodes_PrefixPlaceholder"]" maxlength="10" />
                            <div class="form-text">@L["QRCodes_PrefixHint"]</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@L["QRCodes_PaddingLength"] <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" @bind="request.PaddingLength" @bind:after="OnParameterChanged"
                                   min="1" max="10" placeholder="@L["QRCodes_PaddingLengthPlaceholder"]" />
                            <div class="form-text">@L["QRCodes_PaddingLengthHint"]</div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">@L["QRCodes_BatchNumberLabel"]</label>
                        <input type="text" class="form-control" @bind="request.BatchNumber"
                               placeholder="@L["QRCodes_BatchNumberPlaceholder"]" maxlength="50" />
                        <div class="form-text">@L["QRCodes_BatchNumberHint"]</div>
                    </div>

                    @if (isCreating)
                    {
                        <div class="mb-3">
                            <label class="form-label">@L["QRCodes_CreateProgress"]</label>
                            <div class="progress" style="height: 25px;">
                                <div class="progress-bar progress-bar-striped progress-bar-animated"
                                     role="progressbar"
                                     style="width: @(progressPercentage)%"
                                     aria-valuenow="@progressPercentage"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                    @progressPercentage%
                                </div>
                            </div>
                            <div class="form-text mt-2">
                                @L["QRCodes_CreatedCount"] @createdCount / @totalCount @L["QRCodes_Items"]
                            </div>
                        </div>
                    }

                    <div class="d-flex gap-2">
                        <button class="btn btn-success" @onclick="BatchCreateQRCodes" disabled="@(isCreating || previewCodes.Count == 0)">
                            @if (isCreating)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                                <span>@L["QRCodes_Creating"]</span>
                            }
                            else
                            {
                                <span class="oi oi-check me-1"></span>
                                <span>@L["QRCodes_BatchCreateButton"] (@previewCodes.Count @L["QRCodes_Items"])</span>
                            }
                        </button>
                        <button class="btn btn-secondary" @onclick="Cancel" disabled="@isCreating">
                            <span class="oi oi-x me-1"></span>@L["Btn_Cancel"]
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- 右侧预览 -->
        <div class="col-md-5">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@L["QRCodes_CodePreview"]</h5>
                    @if (previewCodes.Count > 0)
                    {
                        <span class="badge bg-primary">@L["QRCodes_Total"] @previewCodes.Count @L["QRCodes_Items"]</span>
                    }
                </div>
                <div class="card-body">
                    @if (previewCodes.Count == 0)
                    {
                        <div class="text-center text-muted py-5">
                            <span class="oi oi-eye" style="font-size: 48px;"></span>
                            <p class="mt-2">@L["QRCodes_PreviewHint"]</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <strong>@L["QRCodes_GenerationRule"]</strong>
                            <br/>@L["QRCodes_Format"]@selectedMeatTypeCode-@(string.IsNullOrEmpty(request.Prefix) ? "" : request.Prefix)[@L["QRCodes_Number"]]
                            <br/>@L["QRCodes_Example"]@previewCodes.FirstOrDefault()
                        </div>

                        <div style="max-height: 400px; overflow-y: auto;">
                            <table class="table table-sm table-striped">
                                <thead>
                                    <tr>
                                        <th style="width: 60px;">@L["QRCodes_SequenceNumber"]</th>
                                        <th>@L["QRCodes_Content"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var (code, index) in previewCodes.Select((c, i) => (c, i + 1)))
                                    {
                                        <tr>
                                            <td>@index</td>
                                            <td><code>@(code)</code></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        @if (previewCodes.Count > 100)
                        {
                            <div class="alert alert-warning mt-2 mb-0">
                                <span class="oi oi-warning me-1"></span>
                                <strong>@L["Message_Tip"]</strong>@L["QRCodes_BatchCreateWarning"]
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private BatchCreateQRCodeRequest request = new() { PaddingLength = 3 };
    private List<MeatTypeResponse> meatTypes = new();
    private List<string> previewCodes = new();
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private bool isCreating = false;
    private string selectedMeatTypeCode = string.Empty;

    // 进度相关
    private int progressPercentage = 0;
    private int createdCount = 0;
    private int totalCount = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadMeatTypes();
    }

    private async Task LoadMeatTypes()
    {
        try
        {
            meatTypes = await MeatTypeService.GetAllAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"{L["MeatTypes_LoadFailed"].Value} {ex.Message}";
        }
    }

    private void OnParameterChanged()
    {
        UpdatePreview();
    }

    private void UpdatePreview()
    {
        previewCodes.Clear();
        errorMessage = string.Empty;
        selectedMeatTypeCode = string.Empty;

        // 验证参数
        if (request.MeatTypeId <= 0)
        {
            return;
        }

        if (request.StartNumber <= 0 || request.EndNumber <= 0)
        {
            return;
        }

        if (request.StartNumber > request.EndNumber)
        {
            errorMessage = L["QRCodes_StartNumberGreaterThanEnd"].Value;
            return;
        }

        if (request.PaddingLength < 1 || request.PaddingLength > 10)
        {
            errorMessage = L["QRCodes_PaddingLengthRange"].Value;
            return;
        }

        // 检查数量限制
        int count = request.EndNumber - request.StartNumber + 1;
        if (count > 1000)
        {
            errorMessage = L["QRCodes_BatchCreateLimit"].Value;
            return;
        }

        // 获取选中的肉类类型
        var selectedMeatType = meatTypes.FirstOrDefault(m => m.Id == request.MeatTypeId);
        if (selectedMeatType == null)
        {
            return;
        }

        selectedMeatTypeCode = selectedMeatType.Code;

        // 生成预览列表
        for (int i = request.StartNumber; i <= request.EndNumber; i++)
        {
            var code = $"{request.Prefix}{i.ToString().PadLeft(request.PaddingLength, '0')}";
            var content = $"{selectedMeatType.Code}-{code}";
            previewCodes.Add(content);
        }
    }

    private async Task BatchCreateQRCodes()
    {
        errorMessage = string.Empty;
        successMessage = string.Empty;
        isCreating = true;
        progressPercentage = 0;
        createdCount = 0;
        totalCount = previewCodes.Count;

        try
        {
            // 基本验证
            if (request.MeatTypeId <= 0)
            {
                errorMessage = L["QRCodes_SelectMeatTypeRequired"].Value;
                return;
            }

            if (request.StartNumber <= 0 || request.EndNumber <= 0)
            {
                errorMessage = L["QRCodes_ValidNumberRequired"].Value;
                return;
            }

            if (request.StartNumber > request.EndNumber)
            {
                errorMessage = L["QRCodes_StartNumberGreaterThanEnd"].Value;
                return;
            }

            // 调用服务批量创建
            await QRCodeService.BatchCreateAsync(request);

            // 成功
            successMessage = $"{L["QRCodes_BatchCreateSuccess"].Value} {totalCount} {L["QRCodes_Items"].Value}";
            progressPercentage = 100;
            createdCount = totalCount;

            // 延迟2秒后跳转
            await Task.Delay(2000);
            Navigation.NavigateTo("/qrcodes");
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
            progressPercentage = 0;
        }
        finally
        {
            isCreating = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/qrcodes");
    }
}
