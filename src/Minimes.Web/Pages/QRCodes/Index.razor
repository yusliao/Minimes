@page "/qrcodes"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "Admin")]
@using Microsoft.Extensions.Localization
@using Minimes.Application.Interfaces
@using Minimes.Application.DTOs.QRCode
@using Minimes.Application.DTOs.MeatType
@using Minimes.Application.Resources
@inject IStringLocalizer<SharedResource> L
@inject IQRCodeService QRCodeService
@inject IMeatTypeService MeatTypeService
@inject IExcelExportService ExcelExportService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>@L["QRCodes_Title"] - MiniMES</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>
                <span class="oi oi-qrcode me-2"></span>@L["QRCodes_Title"]
            </h2>
            <p class="text-muted">@L["QRCodes_Description"]</p>
        </div>
        <div class="col-auto">
            <button class="btn btn-success me-2" @onclick="NavigateToBatchCreate">
                <span class="oi oi-layers me-1"></span>@L["QRCodes_BatchCreate"]
            </button>
            <button class="btn btn-primary" @onclick="NavigateToCreate">
                <span class="oi oi-plus me-1"></span>@L["QRCodes_AddNew"]
            </button>
        </div>
    </div>

    <!-- 统计信息 -->
    @if (statistics != null)
    {
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h6 class="text-muted">@L["QRCodes_TotalCount"]</h6>
                        <h3>@statistics.TotalCount</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h6 class="text-muted">@L["QRCodes_ActiveCount"]</h6>
                        <h3 class="text-success">@statistics.ActiveCount</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h6 class="text-muted">@L["QRCodes_TotalPrintCount"]</h6>
                        <h3 class="text-info">@statistics.TotalPrintCount</h3>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- 筛选条件 -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">@L["QRCodes_MeatTypeLabel"]</label>
                    <select class="form-select" @bind="filterMeatTypeId">
                        <option value="0">@L["Filter_All"]</option>
                        @foreach (var meatType in meatTypes)
                        {
                            <option value="@meatType.Id">@meatType.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">@L["QRCodes_BatchNumberLabel"]</label>
                    <input type="text" class="form-control" @bind="filterBatchNumber" placeholder="@L["QRCodes_BatchNumberPlaceholder"]" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">@L["QRCodes_StatusLabel"]</label>
                    <select class="form-select" @bind="filterIsActive">
                        <option value="">@L["Filter_All"]</option>
                        <option value="true">@L["Status_Active"]</option>
                        <option value="false">@L["Status_Inactive"]</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">&nbsp;</label>
                    <div>
                        <button class="btn btn-primary me-2" @onclick="ApplyFilter">
                            <span class="oi oi-magnifying-glass me-1"></span>@L["Btn_Search"]
                        </button>
                        <button class="btn btn-secondary me-2" @onclick="ResetFilter">
                            <span class="oi oi-reload me-1"></span>@L["Btn_Reset"]
                        </button>
                        <button class="btn btn-success" @onclick="ExportToExcel" disabled="@(!filteredQRCodes.Any())">
                            <span class="oi oi-data-transfer-download me-1"></span>@L["Btn_ExportExcel"]
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 二维码列表 -->
    <div class="card">
        <div class="card-body">
            @if (isLoading)
            {
                <p class="text-center text-muted">@L["Status_Loading"]</p>
            }
            else if (!filteredQRCodes.Any())
            {
                <p class="text-center text-muted">@L["QRCodes_NoData"]</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>@L["QRCodes_Id"]</th>
                                <th>@L["QRCodes_Code"]</th>
                                <th>@L["QRCodes_MeatType"]</th>
                                <th>@L["QRCodes_Content"]</th>
                                <th>@L["QRCodes_Image"]</th>
                                <th>@L["QRCodes_BatchNumber"]</th>
                                <th>@L["QRCodes_PrintCount"]</th>
                                <th>@L["QRCodes_Status"]</th>
                                <th>@L["QRCodes_CreatedAt"]</th>
                                <th>@L["QRCodes_Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var qrCode in filteredQRCodes)
                            {
                                <tr>
                                    <td>@qrCode.Id</td>
                                    <td>@qrCode.Code</td>
                                    <td>@qrCode.MeatTypeName</td>
                                    <td><code>@qrCode.Content</code></td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(qrCode.ImageBase64))
                                        {
                                            <img src="data:image/png;base64,@qrCode.ImageBase64"
                                                 alt="QR Code"
                                                 style="width: 60px; height: 60px;" />
                                        }
                                    </td>
                                    <td>@(qrCode.BatchNumber ?? "-")</td>
                                    <td>@qrCode.PrintCount</td>
                                    <td>
                                        @if (qrCode.IsActive)
                                        {
                                            <span class="badge bg-success">@L["Status_Active"]</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@L["Status_Inactive"]</span>
                                        }
                                    </td>
                                    <td>@qrCode.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary me-1"
                                                @onclick="() => PrintQRCode(qrCode)">
                                            <span class="oi oi-print"></span>
                                        </button>
                                        <button class="btn btn-sm btn-outline-primary me-1"
                                                @onclick="() => NavigateToEdit(qrCode.Id)">
                                            <span class="oi oi-pencil"></span>
                                        </button>
                                        <button class="btn btn-sm btn-outline-info me-1"
                                                @onclick="() => ToggleActive(qrCode.Id)">
                                            <span class="oi oi-power-standby"></span>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger"
                                                @onclick="() => DeleteQRCode(qrCode.Id)">
                                            <span class="oi oi-trash"></span>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<!-- 打印区域（隐藏） -->
<div id="printArea" style="display:none;">
    @if (printingQRCode != null)
    {
        <div style="text-align:center;padding:40px;">
            <img src="data:image/png;base64,@printingQRCode.ImageBase64"
                 alt="@printingQRCode.Content"
                 style="width:300px;height:300px;" />
            <h2 style="margin-top:30px;font-weight:bold;">@printingQRCode.Content</h2>
            @if (!string.IsNullOrEmpty(printingQRCode.MeatTypeName))
            {
                <p style="font-size:20px;color:#666;margin-top:10px;">@printingQRCode.MeatTypeName</p>
            }
        </div>
    }
</div>

@code {
    private List<QRCodeResponse> qrCodes = new();
    private List<QRCodeResponse> filteredQRCodes = new();
    private List<MeatTypeResponse> meatTypes = new();
    private QRCodeStatistics? statistics;
    private bool isLoading = true;
    private QRCodeResponse? printingQRCode;

    // 筛选条件
    private int filterMeatTypeId = 0;
    private string filterBatchNumber = string.Empty;
    private string? filterIsActive = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            qrCodes = await QRCodeService.GetAllAsync();
            meatTypes = await MeatTypeService.GetAllAsync();
            statistics = await QRCodeService.GetStatisticsAsync();
            ApplyFilter();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"{L["QRCodes_LoadFailed"].Value} {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ApplyFilter()
    {
        filteredQRCodes = qrCodes;

        // 按肉类类型筛选
        if (filterMeatTypeId > 0)
        {
            filteredQRCodes = filteredQRCodes.Where(q => q.MeatTypeId == filterMeatTypeId).ToList();
        }

        // 按批次号筛选
        if (!string.IsNullOrWhiteSpace(filterBatchNumber))
        {
            filteredQRCodes = filteredQRCodes.Where(q =>
                !string.IsNullOrEmpty(q.BatchNumber) &&
                q.BatchNumber.Contains(filterBatchNumber, StringComparison.OrdinalIgnoreCase)
            ).ToList();
        }

        // 按状态筛选
        if (!string.IsNullOrEmpty(filterIsActive))
        {
            var isActive = bool.Parse(filterIsActive);
            filteredQRCodes = filteredQRCodes.Where(q => q.IsActive == isActive).ToList();
        }
    }

    private void ResetFilter()
    {
        filterMeatTypeId = 0;
        filterBatchNumber = string.Empty;
        filterIsActive = null;
        ApplyFilter();
    }

    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/qrcodes/create");
    }

    private void NavigateToBatchCreate()
    {
        Navigation.NavigateTo("/qrcodes/batch-create");
    }

    private void NavigateToEdit(int id)
    {
        Navigation.NavigateTo($"/qrcodes/edit/{id}");
    }

    private async Task ToggleActive(int id)
    {
        try
        {
            await QRCodeService.ToggleActiveAsync(id);
            await LoadData();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"{L["QRCodes_ToggleStatusFailed"].Value} {ex.Message}");
        }
    }

    private async Task DeleteQRCode(int id)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", L["QRCodes_ConfirmDelete"].Value);
        if (!confirmed) return;

        try
        {
            await QRCodeService.DeleteAsync(id);
            await LoadData();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"{L["QRCodes_DeleteFailed"].Value} {ex.Message}");
        }
    }

    private async Task ExportToExcel()
    {
        try
        {
            var excelBytes = await ExcelExportService.ExportQRCodesAsync(filteredQRCodes);
            var fileName = $"{L["QRCodes_ExportFileName"].Value}_{DateTime.Now:yyyyMMdd}.xlsx";
            await JSRuntime.InvokeVoidAsync("downloadFile", fileName, Convert.ToBase64String(excelBytes));
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"{L["Export_Failed"].Value} {ex.Message}");
        }
    }

    private async Task PrintQRCode(QRCodeResponse qrCode)
    {
        try
        {
            printingQRCode = qrCode;
            StateHasChanged();
            await Task.Delay(100);
            await JSRuntime.InvokeVoidAsync("printQRCode");
            await QRCodeService.RecordPrintAsync(qrCode.Id);
            await LoadData();
            await JSRuntime.InvokeVoidAsync("alert", L["QRCode_PrintSuccess"].Value);
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"{L["QRCode_PrintFailed"].Value}: {ex.Message}");
        }
    }
}
