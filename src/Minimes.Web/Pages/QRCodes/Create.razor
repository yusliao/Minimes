@page "/qrcodes/create"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "Admin")]
@using Minimes.Application.Interfaces
@using Minimes.Application.DTOs.QRCode
@using Minimes.Application.DTOs.MeatType
@inject IQRCodeService QRCodeService
@inject IMeatTypeService MeatTypeService
@inject IQRCodeGeneratorService QRCodeGeneratorService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>新增二维码 - MiniMES</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>
                <span class="oi oi-plus me-2"></span>新增二维码
            </h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/qrcodes">二维码管理</a></li>
                    <li class="breadcrumb-item active">新增</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <!-- 左侧表单 -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">基本信息</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>错误：</strong> @errorMessage
                            <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
                        </div>
                    }

                    <div class="mb-3">
                        <label class="form-label">肉类类型 <span class="text-danger">*</span></label>
                        <select class="form-select" @bind="request.MeatTypeId" @bind:after="OnMeatTypeChanged">
                            <option value="0">-- 请选择肉类类型 --</option>
                            @foreach (var meatType in meatTypes)
                            {
                                <option value="@meatType.Id">@meatType.Name (@meatType.Code)</option>
                            }
                        </select>
                        <div class="form-text">选择二维码关联的肉类类型</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">编号 <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" @bind="request.Code" @bind:after="OnCodeChanged"
                               placeholder="例如：001, A01, 20260123-001" maxlength="50" />
                        <div class="form-text">输入唯一编号，将与肉类类型代码组合生成二维码内容</div>
                    </div>

                    @if (!string.IsNullOrEmpty(previewContent))
                    {
                        <div class="mb-3">
                            <label class="form-label">二维码内容（自动生成）</label>
                            <input type="text" class="form-control" value="@previewContent" readonly />
                            <div class="form-text text-success">
                                <span class="oi oi-check me-1"></span>格式：@selectedMeatTypeCode-@request.Code
                            </div>
                        </div>
                    }

                    <div class="mb-3">
                        <label class="form-label">批次号</label>
                        <input type="text" class="form-control" @bind="request.BatchNumber"
                               placeholder="例如：20260123-A" maxlength="50" />
                        <div class="form-text">可选，用于批量管理和追溯</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">备注</label>
                        <textarea class="form-control" @bind="request.Remarks" rows="3"
                                  placeholder="输入备注信息..." maxlength="500"></textarea>
                        <div class="form-text">可选，最多500字符</div>
                    </div>

                    <div class="d-flex gap-2">
                        <button class="btn btn-primary" @onclick="SaveQRCode" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                                <span>保存中...</span>
                            }
                            else
                            {
                                <span class="oi oi-check me-1"></span>
                                <span>保存</span>
                            }
                        </button>
                        <button class="btn btn-secondary" @onclick="Cancel">
                            <span class="oi oi-x me-1"></span>取消
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- 右侧预览和说明 -->
        <div class="col-md-4">
            <!-- 二维码预览 -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0">二维码预览</h5>
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(previewImageBase64))
                    {
                        <img src="data:image/png;base64,@previewImageBase64"
                             alt="QR Code Preview"
                             class="img-fluid mb-2"
                             style="max-width: 200px;" />
                        <p class="text-muted small mb-0">@previewContent</p>
                    }
                    else
                    {
                        <div class="text-muted py-5">
                            <span class="oi oi-qrcode" style="font-size: 48px;"></span>
                            <p class="mt-2">选择肉类类型并输入编号后<br/>将显示二维码预览</p>
                        </div>
                    }
                </div>
            </div>

            <!-- 填写说明 -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">填写说明</h5>
                </div>
                <div class="card-body">
                    <h6 class="text-primary">
                        <span class="oi oi-info me-1"></span>二维码内容规则
                    </h6>
                    <p class="small mb-3">
                        二维码内容由<strong>肉类类型代码</strong>和<strong>编号</strong>组合生成：
                        <br/><code>肉类代码-编号</code>
                    </p>

                    <h6 class="text-primary">
                        <span class="oi oi-lightbulb me-1"></span>编号建议
                    </h6>
                    <ul class="small mb-3">
                        <li>使用数字编号：001, 002, 003...</li>
                        <li>使用字母+数字：A01, B01, C01...</li>
                        <li>使用日期+序号：20260123-001</li>
                        <li>确保编号在同一肉类类型下唯一</li>
                    </ul>

                    <h6 class="text-primary">
                        <span class="oi oi-layers me-1"></span>批次号用途
                    </h6>
                    <p class="small mb-0">
                        批次号用于将多个二维码归为一组，便于：
                    </p>
                    <ul class="small mb-0">
                        <li>批量查询和筛选</li>
                        <li>质量追溯管理</li>
                        <li>生产批次统计</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private CreateQRCodeRequest request = new();
    private List<MeatTypeResponse> meatTypes = new();
    private string errorMessage = string.Empty;
    private bool isSaving = false;

    // 预览相关
    private string previewContent = string.Empty;
    private string previewImageBase64 = string.Empty;
    private string selectedMeatTypeCode = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadMeatTypes();
    }

    private async Task LoadMeatTypes()
    {
        try
        {
            meatTypes = await MeatTypeService.GetAllAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"加载肉类类型失败: {ex.Message}";
        }
    }

    private void OnMeatTypeChanged()
    {
        UpdatePreview();
    }

    private void OnCodeChanged()
    {
        UpdatePreview();
    }

    private void UpdatePreview()
    {
        // 清空预览
        previewContent = string.Empty;
        previewImageBase64 = string.Empty;
        selectedMeatTypeCode = string.Empty;

        // 验证输入
        if (request.MeatTypeId <= 0 || string.IsNullOrWhiteSpace(request.Code))
        {
            return;
        }

        // 获取选中的肉类类型
        var selectedMeatType = meatTypes.FirstOrDefault(m => m.Id == request.MeatTypeId);
        if (selectedMeatType == null)
        {
            return;
        }

        // 生成预览内容
        selectedMeatTypeCode = selectedMeatType.Code;
        previewContent = $"{selectedMeatType.Code}-{request.Code.Trim()}";

        // 生成预览图片
        try
        {
            previewImageBase64 = QRCodeGeneratorService.GenerateQRCodeBase64(previewContent, pixelsPerModule: 20);
        }
        catch (Exception ex)
        {
            errorMessage = $"生成预览失败: {ex.Message}";
        }
    }

    private async Task SaveQRCode()
    {
        errorMessage = string.Empty;
        isSaving = true;

        try
        {
            // 基本验证
            if (request.MeatTypeId <= 0)
            {
                errorMessage = "请选择肉类类型";
                return;
            }

            if (string.IsNullOrWhiteSpace(request.Code))
            {
                errorMessage = "请输入编号";
                return;
            }

            // 调用服务创建
            await QRCodeService.CreateAsync(request);

            // 成功后跳转到列表页
            Navigation.NavigateTo("/qrcodes");
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isSaving = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/qrcodes");
    }
}
