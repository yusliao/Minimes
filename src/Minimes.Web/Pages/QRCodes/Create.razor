@page "/qrcodes/create"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "Admin")]
@using Microsoft.Extensions.Localization
@using Minimes.Application.Interfaces
@using Minimes.Application.DTOs.QRCode
@using Minimes.Application.DTOs.MeatType
@using Minimes.Application.Resources
@inject IStringLocalizer<SharedResource> L
@inject IQRCodeService QRCodeService
@inject IMeatTypeService MeatTypeService
@inject IQRCodeGeneratorService QRCodeGeneratorService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>@L["QRCodes_CreateTitle"] - MiniMES</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>
                <span class="oi oi-plus me-2"></span>@L["QRCodes_CreateTitle"]
            </h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/qrcodes">@L["QRCodes_Title"]</a></li>
                    <li class="breadcrumb-item active">@L["Breadcrumb_Create"]</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <!-- 左侧表单 -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">@L["QRCodes_BasicInfo"]</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>@L["Message_Error"]</strong> @errorMessage
                            <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
                        </div>
                    }

                    <div class="mb-3">
                        <label class="form-label">@L["QRCodes_MeatTypeLabel"] <span class="text-danger">*</span></label>
                        <select class="form-select" @bind="request.MeatTypeId" @bind:after="OnMeatTypeChanged">
                            <option value="0">@L["QRCodes_SelectMeatType"]</option>
                            @foreach (var meatType in meatTypes)
                            {
                                <option value="@meatType.Id">@meatType.Name (@meatType.Code)</option>
                            }
                        </select>
                        <div class="form-text">@L["QRCodes_MeatTypeHint"]</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">@L["QRCodes_CodeLabel"] <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" @bind="request.Code" @bind:after="OnCodeChanged"
                               placeholder="@L["QRCodes_CodePlaceholder"]" maxlength="50" />
                        <div class="form-text">@L["QRCodes_CodeHint"]</div>
                    </div>

                    @if (!string.IsNullOrEmpty(previewContent))
                    {
                        <div class="mb-3">
                            <label class="form-label">@L["QRCodes_ContentPreview"]</label>
                            <input type="text" class="form-control" value="@previewContent" readonly />
                            <div class="form-text text-success">
                                <span class="oi oi-check me-1"></span>@L["QRCodes_ContentFormat"]@selectedMeatTypeCode-@request.Code
                            </div>
                        </div>
                    }

                    <div class="mb-3">
                        <label class="form-label">@L["QRCodes_BatchNumberLabel"]</label>
                        <input type="text" class="form-control" @bind="request.BatchNumber"
                               placeholder="@L["QRCodes_BatchNumberPlaceholder"]" maxlength="50" />
                        <div class="form-text">@L["QRCodes_BatchNumberHint"]</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">@L["QRCodes_RemarksLabel"]</label>
                        <textarea class="form-control" @bind="request.Remarks" rows="3"
                                  placeholder="@L["QRCodes_RemarksPlaceholder"]" maxlength="500"></textarea>
                        <div class="form-text">@L["QRCodes_RemarksHint"]</div>
                    </div>

                    <div class="d-flex gap-2">
                        <button class="btn btn-primary" @onclick="SaveQRCode" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                                <span>@L["Btn_Saving"]</span>
                            }
                            else
                            {
                                <span class="oi oi-check me-1"></span>
                                <span>@L["Btn_Save"]</span>
                            }
                        </button>
                        <button class="btn btn-secondary" @onclick="Cancel">
                            <span class="oi oi-x me-1"></span>@L["Btn_Cancel"]
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- 右侧预览和说明 -->
        <div class="col-md-4">
            <!-- 二维码预览 -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0">@L["QRCodes_PreviewTitle"]</h5>
                </div>
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(previewImageBase64))
                    {
                        <img src="data:image/png;base64,@previewImageBase64"
                             alt="QR Code Preview"
                             class="img-fluid mb-2"
                             style="max-width: 200px;" />
                        <p class="text-muted small mb-0">@previewContent</p>
                    }
                    else
                    {
                        <div class="text-muted py-5">
                            <span class="oi oi-qrcode" style="font-size: 48px;"></span>
                            <p class="mt-2">@L["QRCodes_PreviewHint"]</p>
                        </div>
                    }
                </div>
            </div>

            <!-- 填写说明 -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">@L["QRCodes_FormGuideTitle"]</h5>
                </div>
                <div class="card-body">
                    <h6 class="text-primary">
                        <span class="oi oi-info me-1"></span>@L["QRCodes_ContentRulesTitle"]
                    </h6>
                    <p class="small mb-3">
                        @L["QRCodes_ContentRulesText"]
                    </p>

                    <h6 class="text-primary">
                        <span class="oi oi-lightbulb me-1"></span>@L["QRCodes_CodeSuggestionsTitle"]
                    </h6>
                    <ul class="small mb-3">
                        <li>@L["QRCodes_CodeSuggestion1"]</li>
                        <li>@L["QRCodes_CodeSuggestion2"]</li>
                        <li>@L["QRCodes_CodeSuggestion3"]</li>
                        <li>@L["QRCodes_CodeSuggestion4"]</li>
                    </ul>

                    <h6 class="text-primary">
                        <span class="oi oi-layers me-1"></span>@L["QRCodes_BatchUsageTitle"]
                    </h6>
                    <p class="small mb-0">
                        @L["QRCodes_BatchUsageText"]
                    </p>
                    <ul class="small mb-0">
                        <li>@L["QRCodes_BatchUsage1"]</li>
                        <li>@L["QRCodes_BatchUsage2"]</li>
                        <li>@L["QRCodes_BatchUsage3"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private CreateQRCodeRequest request = new();
    private List<MeatTypeResponse> meatTypes = new();
    private string errorMessage = string.Empty;
    private bool isSaving = false;

    // 预览相关
    private string previewContent = string.Empty;
    private string previewImageBase64 = string.Empty;
    private string selectedMeatTypeCode = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadMeatTypes();
    }

    private async Task LoadMeatTypes()
    {
        try
        {
            meatTypes = await MeatTypeService.GetAllAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"{L["MeatTypes_LoadFailed"].Value} {ex.Message}";
        }
    }

    private void OnMeatTypeChanged()
    {
        UpdatePreview();
    }

    private void OnCodeChanged()
    {
        UpdatePreview();
    }

    private void UpdatePreview()
    {
        // 清空预览
        previewContent = string.Empty;
        previewImageBase64 = string.Empty;
        selectedMeatTypeCode = string.Empty;

        // 验证输入
        if (request.MeatTypeId <= 0 || string.IsNullOrWhiteSpace(request.Code))
        {
            return;
        }

        // 获取选中的肉类类型
        var selectedMeatType = meatTypes.FirstOrDefault(m => m.Id == request.MeatTypeId);
        if (selectedMeatType == null)
        {
            return;
        }

        // 生成预览内容
        selectedMeatTypeCode = selectedMeatType.Code;
        previewContent = $"{selectedMeatType.Code}-{request.Code.Trim()}";

        // 生成预览图片
        try
        {
            previewImageBase64 = QRCodeGeneratorService.GenerateQRCodeBase64(previewContent, pixelsPerModule: 20);
        }
        catch (Exception ex)
        {
            errorMessage = $"{L["QRCodes_PreviewFailed"].Value} {ex.Message}";
        }
    }

    private async Task SaveQRCode()
    {
        errorMessage = string.Empty;
        isSaving = true;

        try
        {
            // 基本验证
            if (request.MeatTypeId <= 0)
            {
                errorMessage = L["QRCodes_SelectMeatTypeRequired"].Value;
                return;
            }

            if (string.IsNullOrWhiteSpace(request.Code))
            {
                errorMessage = L["QRCodes_CodeRequired"].Value;
                return;
            }

            // 调用服务创建
            await QRCodeService.CreateAsync(request);

            // 成功后跳转到列表页
            Navigation.NavigateTo("/qrcodes");
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isSaving = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/qrcodes");
    }
}
