@page "/customers/create"
@using Microsoft.Extensions.Localization
@using Minimes.Application.Interfaces
@using Minimes.Application.DTOs.Customer
@using Minimes.Application.Resources
@inject IStringLocalizer<SharedResource> L
@inject ICustomerService CustomerService
@inject NavigationManager NavigationManager
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "Admin")]

<PageTitle>@L["Customer_AddNew"] - MiniMES</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>
                <span class="oi oi-plus me-2"></span>@L["Customer_AddNew"]
            </h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/customers">@L["Customer_Title"]</a></li>
                    <li class="breadcrumb-item active">@L["Customer_AddNew"]</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-lg-8">
            <div class="card">
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <span class="oi oi-warning me-2"></span>@errorMessage
                            <button type="button" class="btn-close" @onclick="ClearError"></button>
                        </div>
                    }

                    <EditForm Model="request" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label class="form-label">
                                <strong>@L["Customer_Code"] *</strong>
                                <small class="text-muted">（@L["Customer_CodeHint"]）</small>
                            </label>
                            <input type="text" class="form-control form-control-lg" @bind="request.Code"
                                   placeholder="@L["Customer_CodePlaceholder"]" required />
                            <ValidationMessage For="@(() => request.Code)" />
                            <small class="form-text text-muted">
                                @L["Customer_CodeNote"]
                            </small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <strong>@L["Customer_Name"] *</strong>
                            </label>
                            <input type="text" class="form-control form-control-lg" @bind="request.Name"
                                   placeholder="@L["Customer_NamePlaceholder"]" required />
                            <ValidationMessage For="@(() => request.Name)" />
                        </div>

                        <div class="row">
                            <div class="col-12 col-md-6 mb-3">
                                <label class="form-label">@L["Customer_Contact"]</label>
                                <input type="text" class="form-control" @bind="request.ContactPerson"
                                       placeholder="@L["Customer_ContactPlaceholder"]" />
                                <ValidationMessage For="@(() => request.ContactPerson)" />
                            </div>

                            <div class="col-12 col-md-6 mb-3">
                                <label class="form-label">@L["Customer_Phone"]</label>
                                <input type="tel" class="form-control" @bind="request.Phone"
                                       placeholder="@L["Customer_PhonePlaceholder"]" />
                                <ValidationMessage For="@(() => request.Phone)" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">@L["Customer_Address"]</label>
                            <textarea class="form-control" @bind="request.Address" rows="3"
                                      placeholder="@L["Customer_AddressPlaceholder"]"></textarea>
                            <ValidationMessage For="@(() => request.Address)" />
                        </div>

                        <hr class="my-4" />

                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-outline-secondary btn-lg" @onclick="Cancel">
                                <span class="oi oi-x me-1"></span>@L["Btn_Cancel"]
                            </button>
                            <button type="submit" class="btn btn-primary btn-lg" disabled="@isSaving">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                    <span>@L["Customer_Saving"]</span>
                                }
                                else
                                {
                                    <span class="oi oi-check me-1"></span>
                                    <span>@L["Btn_Save"]</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>

        <!-- 右侧帮助信息 -->
        <div class="col-12 col-lg-4 mt-3 mt-lg-0">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title">
                        <span class="oi oi-info me-2"></span>@L["Customer_HelpTitle"]
                    </h5>
                    <ul class="mb-0">
                        <li class="mb-2">
                            <strong>@L["Customer_Code"]</strong>：@L["Common_Required"]
                        </li>
                        <li class="mb-2">
                            <strong>@L["Customer_Name"]</strong>：@L["Common_Required"]
                        </li>
                        <li class="mb-2">
                            <strong>@L["Customer_Contact"]</strong>：@L["Common_Optional"]
                        </li>
                        <li class="mb-2">
                            <strong>@L["Customer_Phone"]</strong>：@L["Common_Optional"]
                        </li>
                        <li class="mb-2">
                            <strong>@L["Customer_Address"]</strong>：@L["Common_Optional"]
                        </li>
                    </ul>

                    <div class="alert alert-info mt-3 mb-0">
                        <small>
                            <span class="oi oi-lightbulb me-1"></span>
                            @L["Customer_HelpTip"]
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private CreateCustomerRequest request = new();
    private bool isSaving = false;
    private string? errorMessage;

    private async Task HandleSubmit()
    {
        isSaving = true;
        errorMessage = null;

        try
        {
            await CustomerService.CreateAsync(request);
            NavigationManager.NavigateTo("/customers");
        }
        catch (Exception ex)
        {
            errorMessage = $"{L["Customer_SaveFailed"]}: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/customers");
    }

    private void ClearError()
    {
        errorMessage = null;
    }
}
