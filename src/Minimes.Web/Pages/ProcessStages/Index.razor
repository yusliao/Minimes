@page "/processstages"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "Admin")]
@using Microsoft.Extensions.Localization
@using Minimes.Application.Interfaces
@using Minimes.Application.DTOs.ProcessStage
@using Minimes.Application.Resources
@inject IStringLocalizer<SharedResource> L
@inject IProcessStageService ProcessStageService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>@L["ProcessStage_Title"] - MiniMES</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>
                <span class="oi oi-list-rich me-2"></span>@L["ProcessStages_Title"]
            </h2>
            <p class="text-muted">@L["ProcessStages_Description"]</p>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" @onclick="NavigateToCreate">
                <span class="oi oi-plus me-1"></span>@L["ProcessStages_AddNew"]
            </button>
        </div>
    </div>

    <!-- 统计信息 -->
    @if (stages.Any())
    {
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h6 class="text-muted">@L["ProcessStages_TotalCount"]</h6>
                        <h3>@stages.Count</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h6 class="text-muted">@L["ProcessStages_ActiveCount"]</h6>
                        <h3 class="text-success">@stages.Count(s => s.IsActive)</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h6 class="text-muted">@L["ProcessStages_InactiveCount"]</h6>
                        <h3 class="text-secondary">@stages.Count(s => !s.IsActive)</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h6 class="text-muted">@L["ProcessStages_RecordCount"]</h6>
                        <h3 class="text-info">@stages.Sum(s => s.RecordCount)</h3>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- 工序列表 -->
    <div class="card">
        <div class="card-body">
            @if (isLoading)
            {
                <p class="text-center text-muted">@L["Status_Loading"]</p>
            }
            else if (!stages.Any())
            {
                <p class="text-center text-muted">@L["ProcessStages_NoData"]</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>@L["ProcessStages_SortOrder"]</th>
                                <th>@L["ProcessStages_Code"]</th>
                                <th>@L["ProcessStages_Name"]</th>
                                <th>@L["ProcessStages_Type"]</th>
                                <th>@L["ProcessStages_Status"]</th>
                                <th>@L["ProcessStages_IncludeInLossRate"]</th>
                                <th>@L["ProcessStages_RecordCountColumn"]</th>
                                <th>@L["ProcessStages_CreatedAt"]</th>
                                <th>@L["ProcessStages_Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var stage in stages.OrderBy(s => s.DisplayOrder))
                            {
                                <tr>
                                    <td>@stage.DisplayOrder</td>
                                    <td><code>@stage.Code</code></td>
                                    <td><strong>@stage.Name</strong></td>
                                    <td>
                                        <span class="badge @GetStageTypeBadgeClass(stage.StageType)">
                                            @GetStageTypeDisplayName(stage.StageType)
                                        </span>
                                    </td>
                                    <td>
                                        @if (stage.IsActive)
                                        {
                                            <span class="badge bg-success">@L["Status_Active"]</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@L["Status_Inactive"]</span>
                                        }
                                    </td>
                                    <td>
                                        @if (stage.IncludeInLossRate)
                                        {
                                            <span class="text-success">✓</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@stage.RecordCount</td>
                                    <td>@stage.CreatedAt.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-primary" @onclick="() => NavigateToEdit(stage.Id)">
                                                <span class="oi oi-pencil"></span>
                                            </button>
                                            <button class="btn @(stage.IsActive ? "btn-outline-warning" : "btn-outline-success")"
                                                    @onclick="() => ToggleActive(stage.Id)">
                                                <span class="oi @(stage.IsActive ? "oi-ban" : "oi-check")"></span>
                                            </button>
                                            <button class="btn btn-outline-danger"
                                                    @onclick="() => DeleteStage(stage.Id)"
                                                    disabled="@(stage.RecordCount > 0)">
                                                <span class="oi oi-trash"></span>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger mt-3">
            <strong>@L["Message_Error"]</strong>@errorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success mt-3">
            <strong>@L["Message_Success"]</strong>@successMessage
        </div>
    }
</div>

@code {
    private List<ProcessStageResponse> stages = new();
    private bool isLoading = false;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadStages();
    }

    private async Task LoadStages()
    {
        isLoading = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            stages = await ProcessStageService.GetAllAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"{L["ProcessStages_LoadFailed"].Value}{ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/processstages/create");
    }

    private void NavigateToEdit(int id)
    {
        Navigation.NavigateTo($"/processstages/edit/{id}");
    }

    private async Task ToggleActive(int id)
    {
        try
        {
            var success = await ProcessStageService.ToggleActiveAsync(id);
            if (success)
            {
                successMessage = L["ProcessStages_StatusUpdated"].Value;
                await LoadStages();
            }
            else
            {
                errorMessage = L["ProcessStages_UpdateStatusFailed"].Value;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"{L["ProcessStages_OperationFailed"].Value}{ex.Message}";
        }
    }

    private async Task DeleteStage(int id)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", L["ProcessStages_ConfirmDelete"].Value))
        {
            return;
        }

        try
        {
            var success = await ProcessStageService.DeleteAsync(id);
            if (success)
            {
                successMessage = L["ProcessStages_Deleted"].Value;
                await LoadStages();
            }
            else
            {
                errorMessage = L["ProcessStages_DeleteFailed"].Value;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"{L["ProcessStages_DeleteFailed"].Value}: {ex.Message}";
        }
    }

    private string GetStageTypeBadgeClass(string stageType)
    {
        return stageType.ToLower() switch
        {
            "start" => "bg-primary",
            "middle" => "bg-warning text-dark",
            "end" => "bg-success",
            _ => "bg-secondary"
        };
    }

    private string GetStageTypeDisplayName(string stageType)
    {
        return stageType.ToLower() switch
        {
            "start" => L["ProcessStageType_Start"].Value,
            "middle" => L["ProcessStageType_Middle"].Value,
            "end" => L["ProcessStageType_End"].Value,
            _ => stageType
        };
    }
}
