@page "/processstages/create"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "Admin")]
@using Microsoft.Extensions.Localization
@using Minimes.Application.Interfaces
@using Minimes.Application.DTOs.ProcessStage
@using Minimes.Application.Resources
@inject IStringLocalizer<SharedResource> L
@inject IProcessStageService ProcessStageService
@inject NavigationManager Navigation

<PageTitle>@L["ProcessStages_CreateTitle"] - MiniMES</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>
                <span class="oi oi-plus me-2"></span>@L["ProcessStages_CreateTitle"]
            </h2>
            <p class="text-muted">@L["ProcessStages_CreateDescription"]</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <EditForm Model="@request" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />

                        <!-- 工序代码 -->
                        <div class="mb-3">
                            <label class="form-label">
                                <strong>@L["ProcessStages_CodeLabel"]</strong> <span class="text-danger">*</span>
                            </label>
                            <InputText class="form-control" @bind-Value="request.Code" placeholder="@L["ProcessStages_CodePlaceholder"]" />
                            <ValidationMessage For="@(() => request.Code)" />
                            <small class="text-muted">@L["ProcessStages_CodeHint"]</small>
                        </div>

                        <!-- 工序名称 -->
                        <div class="mb-3">
                            <label class="form-label">
                                <strong>@L["ProcessStages_NameLabel"]</strong> <span class="text-danger">*</span>
                            </label>
                            <InputText class="form-control" @bind-Value="request.Name" placeholder="@L["ProcessStages_NamePlaceholder"]" />
                            <ValidationMessage For="@(() => request.Name)" />
                        </div>

                        <!-- 显示顺序 -->
                        <div class="mb-3">
                            <label class="form-label">
                                <strong>@L["ProcessStages_SortOrderLabel"]</strong> <span class="text-danger">*</span>
                            </label>
                            <InputNumber class="form-control" @bind-Value="request.DisplayOrder" />
                            <ValidationMessage For="@(() => request.DisplayOrder)" />
                            <small class="text-muted">@L["ProcessStages_SortOrderHint"]</small>
                        </div>

                        <!-- 工序类型 -->
                        <div class="mb-3">
                            <label class="form-label">
                                <strong>@L["ProcessStages_TypeLabel"]</strong> <span class="text-danger">*</span>
                            </label>
                            <InputSelect class="form-select" @bind-Value="request.StageType">
                                <option value="Start">@L["ProcessStages_TypeStartOption"]</option>
                                <option value="Middle">@L["ProcessStages_TypeMiddleOption"]</option>
                                <option value="End">@L["ProcessStages_TypeEndOption"]</option>
                            </InputSelect>
                            <ValidationMessage For="@(() => request.StageType)" />
                            <small class="text-muted">@L["ProcessStages_TypeHint"]</small>
                        </div>

                        <!-- 计入损耗率 -->
                        <div class="mb-3 form-check">
                            <InputCheckbox class="form-check-input" @bind-Value="request.IncludeInLossRate" id="includeLossRate" />
                            <label class="form-check-label" for="includeLossRate">
                                @L["ProcessStages_IncludeInLossRateLabel"]
                            </label>
                            <div><small class="text-muted">@L["ProcessStages_IncludeInLossRateHint"]</small></div>
                        </div>

                        <!-- 描述说明 -->
                        <div class="mb-3">
                            <label class="form-label">
                                <strong>@L["ProcessStages_DescriptionLabel"]</strong>
                            </label>
                            <InputTextArea class="form-control" @bind-Value="request.Description" rows="3" placeholder="@L["ProcessStages_DescriptionPlaceholder"]" />
                            <ValidationMessage For="@(() => request.Description)" />
                        </div>

                        <!-- 错误提示 -->
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">
                                <strong>@L["Message_Error"]</strong>@errorMessage
                            </div>
                        }

                        <!-- 操作按钮 -->
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                }
                                <span class="oi oi-check me-1"></span>
                                @L["Btn_Save"]
                            </button>
                            <button type="button" class="btn btn-outline-secondary" @onclick="Cancel">
                                <span class="oi oi-x me-1"></span>
                                @L["Btn_Cancel"]
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>

        <!-- 右侧提示面板 -->
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h6 class="card-title">
                        <span class="oi oi-info me-1"></span>@L["ProcessStages_FormGuideTitle"]
                    </h6>
                    <ul class="small mb-0">
                        <li>@L["ProcessStages_FormGuideCode"]</li>
                        <li>@L["ProcessStages_FormGuideName"]</li>
                        <li>@L["ProcessStages_FormGuideSortOrder"]</li>
                        <li><strong>@L["ProcessStages_FormGuideType"]</strong>
                            <ul>
                                <li>@L["ProcessStages_FormGuideTypeStart"]</li>
                                <li>@L["ProcessStages_FormGuideTypeMiddle"]</li>
                                <li>@L["ProcessStages_FormGuideTypeEnd"]</li>
                            </ul>
                        </li>
                        <li>@L["ProcessStages_FormGuideIncludeInLossRate"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private CreateProcessStageRequest request = new()
    {
        DisplayOrder = 1,
        StageType = "Middle",
        IncludeInLossRate = true
    };

    private bool isSubmitting = false;
    private string? errorMessage;

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        errorMessage = null;

        try
        {
            await ProcessStageService.CreateAsync(request);
            Navigation.NavigateTo("/processstages");
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/processstages");
    }
}
