@page "/processstages/create"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "Admin")]
@using Microsoft.Extensions.Localization
@using Minimes.Application.Interfaces
@using Minimes.Application.DTOs.ProcessStage
@using Minimes.Web.Resources
@inject IStringLocalizer<SharedResource> L
@inject IProcessStageService ProcessStageService
@inject NavigationManager Navigation

<PageTitle>新增工序 - MiniMES</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>
                <span class="oi oi-plus me-2"></span>新增工序
            </h2>
            <p class="text-muted">创建新的生产工序环节</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <EditForm Model="@request" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />

                        <!-- 工序代码 -->
                        <div class="mb-3">
                            <label class="form-label">
                                <strong>工序代码</strong> <span class="text-danger">*</span>
                            </label>
                            <InputText class="form-control" @bind-Value="request.Code" placeholder="如：RECEIVING" />
                            <ValidationMessage For="@(() => request.Code)" />
                            <small class="text-muted">工序的唯一标识，建议使用大写英文字母</small>
                        </div>

                        <!-- 工序名称 -->
                        <div class="mb-3">
                            <label class="form-label">
                                <strong>工序名称</strong> <span class="text-danger">*</span>
                            </label>
                            <InputText class="form-control" @bind-Value="request.Name" placeholder="如：原料入库" />
                            <ValidationMessage For="@(() => request.Name)" />
                        </div>

                        <!-- 显示顺序 -->
                        <div class="mb-3">
                            <label class="form-label">
                                <strong>显示顺序</strong> <span class="text-danger">*</span>
                            </label>
                            <InputNumber class="form-control" @bind-Value="request.DisplayOrder" />
                            <ValidationMessage For="@(() => request.DisplayOrder)" />
                            <small class="text-muted">数字越小越靠前</small>
                        </div>

                        <!-- 工序类型 -->
                        <div class="mb-3">
                            <label class="form-label">
                                <strong>工序类型</strong> <span class="text-danger">*</span>
                            </label>
                            <InputSelect class="form-select" @bind-Value="request.StageType">
                                <option value="Start">起始环节（如：原料入库）</option>
                                <option value="Middle">中间环节（如：加工过程）</option>
                                <option value="End">结束环节（如：成品出库）</option>
                            </InputSelect>
                            <ValidationMessage For="@(() => request.StageType)" />
                            <small class="text-muted">用于损耗率计算：起始环节作为基准，结束环节作为对比</small>
                        </div>

                        <!-- 计入损耗率 -->
                        <div class="mb-3 form-check">
                            <InputCheckbox class="form-check-input" @bind-Value="request.IncludeInLossRate" id="includeLossRate" />
                            <label class="form-check-label" for="includeLossRate">
                                计入损耗率计算
                            </label>
                            <div><small class="text-muted">勾选后，该工序的数据会参与损耗率统计</small></div>
                        </div>

                        <!-- 描述说明 -->
                        <div class="mb-3">
                            <label class="form-label">
                                <strong>描述说明</strong>
                            </label>
                            <InputTextArea class="form-control" @bind-Value="request.Description" rows="3" placeholder="工序的详细说明..." />
                            <ValidationMessage For="@(() => request.Description)" />
                        </div>

                        <!-- 错误提示 -->
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">
                                <strong>错误：</strong>@errorMessage
                            </div>
                        }

                        <!-- 操作按钮 -->
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                }
                                <span class="oi oi-check me-1"></span>
                                保存
                            </button>
                            <button type="button" class="btn btn-outline-secondary" @onclick="Cancel">
                                <span class="oi oi-x me-1"></span>
                                取消
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>

        <!-- 右侧提示面板 -->
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h6 class="card-title">
                        <span class="oi oi-info me-1"></span>填写说明
                    </h6>
                    <ul class="small mb-0">
                        <li><strong>工序代码</strong>：必须唯一，建议使用大写英文字母，如：RECEIVING、PROCESSING、SHIPPING</li>
                        <li><strong>工序名称</strong>：显示给用户的名称，如：原料入库、加工过程、成品出库</li>
                        <li><strong>显示顺序</strong>：控制工序在列表中的排列顺序</li>
                        <li><strong>工序类型</strong>：
                            <ul>
                                <li>起始环节：生产流程的开始（如原料入库）</li>
                                <li>中间环节：生产过程中的加工环节</li>
                                <li>结束环节：生产流程的结束（如成品出库）</li>
                            </ul>
                        </li>
                        <li><strong>计入损耗率</strong>：勾选后，该工序的数据会参与损耗率统计计算</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private CreateProcessStageRequest request = new()
    {
        DisplayOrder = 1,
        StageType = "Middle",
        IncludeInLossRate = true
    };

    private bool isSubmitting = false;
    private string? errorMessage;

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        errorMessage = null;

        try
        {
            await ProcessStageService.CreateAsync(request);
            Navigation.NavigateTo("/processstages");
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/processstages");
    }
}
