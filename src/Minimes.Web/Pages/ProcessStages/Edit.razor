@page "/processstages/edit/{id:int}"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "Admin")]
@using Microsoft.Extensions.Localization
@using Minimes.Application.Interfaces
@using Minimes.Application.DTOs.ProcessStage
@using Minimes.Application.Resources
@inject IStringLocalizer<SharedResource> L
@inject IProcessStageService ProcessStageService
@inject NavigationManager Navigation

<PageTitle>@L["ProcessStages_EditTitle"] - MiniMES</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>
                <span class="oi oi-pencil me-2"></span>@L["ProcessStages_EditTitle"]
            </h2>
            <p class="text-muted">@L["ProcessStages_EditDescription"]</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">@L["Status_Loading"]</span>
            </div>
            <p class="text-muted mt-2">@L["ProcessStages_LoadingInfo"]</p>
        </div>
    }
    else if (stage == null)
    {
        <div class="alert alert-warning">
            <strong>@L["Message_Warning"]</strong>@L["ProcessStages_NotFoundMessage"]
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <EditForm Model="@request" OnValidSubmit="HandleSubmit">
                            <DataAnnotationsValidator />

                            <!-- 工序代码（只读） -->
                            <div class="mb-3">
                                <label class="form-label">
                                    <strong>@L["ProcessStages_CodeLabel"]</strong>
                                </label>
                                <input type="text" class="form-control" value="@stage.Code" readonly disabled />
                                <small class="text-muted">@L["ProcessStages_CodeReadonly"]</small>
                            </div>

                            <!-- 工序名称 -->
                            <div class="mb-3">
                                <label class="form-label">
                                    <strong>@L["ProcessStages_NameLabel"]</strong> <span class="text-danger">*</span>
                                </label>
                                <InputText class="form-control" @bind-Value="request.Name" />
                                <ValidationMessage For="@(() => request.Name)" />
                            </div>

                            <!-- 显示顺序 -->
                            <div class="mb-3">
                                <label class="form-label">
                                    <strong>@L["ProcessStages_SortOrderLabel"]</strong> <span class="text-danger">*</span>
                                </label>
                                <InputNumber class="form-control" @bind-Value="request.DisplayOrder" />
                                <ValidationMessage For="@(() => request.DisplayOrder)" />
                                <small class="text-muted">@L["ProcessStages_SortOrderHint"]</small>
                            </div>

                            <!-- 工序类型 -->
                            <div class="mb-3">
                                <label class="form-label">
                                    <strong>@L["ProcessStages_TypeLabel"]</strong> <span class="text-danger">*</span>
                                </label>
                                <InputSelect class="form-select" @bind-Value="request.StageType">
                                    <option value="Start">@L["ProcessStages_TypeStartOption"]</option>
                                    <option value="Middle">@L["ProcessStages_TypeMiddleOption"]</option>
                                    <option value="End">@L["ProcessStages_TypeEndOption"]</option>
                                </InputSelect>
                                <ValidationMessage For="@(() => request.StageType)" />
                            </div>

                            <!-- 激活状态 -->
                            <div class="mb-3 form-check">
                                <InputCheckbox class="form-check-input" @bind-Value="request.IsActive" id="isActive" />
                                <label class="form-check-label" for="isActive">
                                    @L["ProcessStages_ActiveLabel"]
                                </label>
                                <div><small class="text-muted">@L["ProcessStages_ActiveHint"]</small></div>
                            </div>

                            <!-- 计入损耗率 -->
                            <div class="mb-3 form-check">
                                <InputCheckbox class="form-check-input" @bind-Value="request.IncludeInLossRate" id="includeLossRate" />
                                <label class="form-check-label" for="includeLossRate">
                                    @L["ProcessStages_IncludeInLossRateLabel"]
                                </label>
                            </div>

                            <!-- 描述说明 -->
                            <div class="mb-3">
                                <label class="form-label">
                                    <strong>@L["ProcessStages_DescriptionLabel"]</strong>
                                </label>
                                <InputTextArea class="form-control" @bind-Value="request.Description" rows="3" />
                                <ValidationMessage For="@(() => request.Description)" />
                            </div>

                            <!-- 错误提示 -->
                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-danger">
                                    <strong>@L["Message_Error"]</strong>@errorMessage
                                </div>
                            }

                            <!-- 操作按钮 -->
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                    @if (isSubmitting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-1"></span>
                                    }
                                    <span class="oi oi-check me-1"></span>
                                    @L["Btn_Save"]
                                </button>
                                <button type="button" class="btn btn-outline-secondary" @onclick="Cancel">
                                    <span class="oi oi-x me-1"></span>
                                    @L["Btn_Cancel"]
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>

            <!-- 右侧信息面板 -->
            <div class="col-md-4">
                <div class="card bg-light mb-3">
                    <div class="card-body">
                        <h6 class="card-title">
                            <span class="oi oi-info me-1"></span>@L["ProcessStages_InfoTitle"]
                        </h6>
                        <ul class="list-unstyled small mb-0">
                            <li><strong>@L["ProcessStages_CodeLabel"]：</strong><code>@stage.Code</code></li>
                            <li><strong>@L["ProcessStages_CreatedAtLabel"]：</strong>@stage.CreatedAt.ToString("yyyy-MM-dd HH:mm")</li>
                            <li><strong>@L["ProcessStages_RecordCountLabel"]：</strong>@stage.RecordCount @L["Unit_Records"]</li>
                        </ul>
                    </div>
                </div>

                @if (stage.RecordCount > 0)
                {
                    <div class="card border-warning">
                        <div class="card-body">
                            <h6 class="card-title text-warning">
                                <span class="oi oi-warning me-1"></span>@L["ProcessStages_UsageHintTitle"]
                            </h6>
                            <p class="small mb-0">
                                @L["ProcessStages_UsageHintMessage1"] <strong>@stage.RecordCount</strong> @L["ProcessStages_UsageHintMessage2"]
                                @L["ProcessStages_UsageHintMessage3"]
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private ProcessStageResponse? stage;
    private UpdateProcessStageRequest request = new();
    private bool isLoading = false;
    private bool isSubmitting = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadStage();
    }

    private async Task LoadStage()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            stage = await ProcessStageService.GetByIdAsync(Id);
            if (stage != null)
            {
                // 填充表单数据
                request.Name = stage.Name;
                request.DisplayOrder = stage.DisplayOrder;
                request.IsActive = stage.IsActive;
                request.StageType = stage.StageType;
                request.IncludeInLossRate = stage.IncludeInLossRate;
                request.Description = stage.Description;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"{L["ProcessStages_LoadFailed"].Value}{ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        errorMessage = null;

        try
        {
            await ProcessStageService.UpdateAsync(Id, request);
            Navigation.NavigateTo("/processstages");
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/processstages");
    }
}
