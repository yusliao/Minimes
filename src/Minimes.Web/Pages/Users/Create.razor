@page "/users/create"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "Admin")]
@using Microsoft.Extensions.Localization
@using Minimes.Application.Interfaces
@using Minimes.Application.DTOs.User
@using Minimes.Domain.Enums
@using System.ComponentModel.DataAnnotations
@using Minimes.Web.Resources
@inject IStringLocalizer<SharedResource> L
@inject IUserService UserService
@inject NavigationManager NavigationManager

<PageTitle>@L["User_CreateTitle"] - MiniMES</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>
                <span class="oi oi-plus me-2"></span>@L["User_CreateTitle"]
            </h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/users">@L["User_Title"]</a></li>
                    <li class="breadcrumb-item active">@L["User_CreateTitle"]</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <span class="oi oi-warning me-2"></span>
                                @errorMessage
                                <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                            </div>
                        }

                        <div class="mb-3">
                            <label for="username" class="form-label">
                                @L["User_Username"] <span class="text-danger">*</span>
                            </label>
                            <InputText id="username"
                                       class="form-control"
                                       @bind-Value="model.Username"
                                       placeholder="@L["User_UsernamePlaceholder"]"
                                       autocomplete="off" />
                            <ValidationMessage For="@(() => model.Username)" class="text-danger small" />
                            <small class="form-text text-muted">@L["User_UsernameNote"]</small>
                        </div>

                        <div class="mb-3">
                            <label for="fullName" class="form-label">
                                @L["User_FullName"] <span class="text-danger">*</span>
                            </label>
                            <InputText id="fullName"
                                       class="form-control"
                                       @bind-Value="model.FullName"
                                       placeholder="@L["User_FullNamePlaceholder"]" />
                            <ValidationMessage For="@(() => model.FullName)" class="text-danger small" />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">
                                @L["User_Password"] <span class="text-danger">*</span>
                            </label>
                            <InputText id="password"
                                       type="password"
                                       class="form-control"
                                       @bind-Value="model.Password"
                                       placeholder="@L["User_PasswordPlaceholder"]"
                                       autocomplete="new-password" />
                            <ValidationMessage For="@(() => model.Password)" class="text-danger small" />
                        </div>

                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">
                                @L["User_ConfirmPassword"] <span class="text-danger">*</span>
                            </label>
                            <InputText id="confirmPassword"
                                       type="password"
                                       class="form-control"
                                       @bind-Value="model.ConfirmPassword"
                                       placeholder="@L["User_ConfirmPasswordPlaceholder"]"
                                       autocomplete="new-password" />
                            <ValidationMessage For="@(() => model.ConfirmPassword)" class="text-danger small" />
                        </div>

                        <div class="mb-3">
                            <label for="role" class="form-label">
                                @L["User_Role"] <span class="text-danger">*</span>
                            </label>
                            <InputSelect id="role" class="form-select" @bind-Value="model.Role">
                                <option value="@UserRole.Operator">@L["User_RoleOperatorDesc"]</option>
                                <option value="@UserRole.Administrator">@L["User_RoleAdminDesc"]</option>
                            </InputSelect>
                            <ValidationMessage For="@(() => model.Role)" class="text-danger small" />
                            <small class="form-text text-muted">
                                <span class="oi oi-warning me-1"></span>
                                @L["User_RoleWarning"]
                            </small>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                    <span>@L["User_Creating"]</span>
                                }
                                else
                                {
                                    <span class="oi oi-check me-1"></span>
                                    <span>@L["User_CreateUser"]</span>
                                }
                            </button>
                            <a href="/users" class="btn btn-outline-secondary">
                                <span class="oi oi-x me-1"></span>@L["Btn_Cancel"]
                            </a>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title">
                        <span class="oi oi-info me-2"></span>@L["User_PermissionTitle"]
                    </h5>
                    <hr />
                    <h6 class="text-primary">
                        <span class="oi oi-person me-1"></span>@L["User_OperatorPermission"]
                    </h6>
                    <ul class="small">
                        <li>@L["User_OperatorPerm1"]</li>
                        <li>@L["User_OperatorPerm2"]</li>
                        <li>@L["User_OperatorPerm3"]</li>
                        <li>@L["User_OperatorPerm4"]</li>
                    </ul>

                    <h6 class="text-danger mt-3">
                        <span class="oi oi-shield me-1"></span>@L["User_AdminPermission"]
                    </h6>
                    <ul class="small">
                        <li>@L["User_AdminPerm1"]</li>
                        <li>@L["User_AdminPerm2"]</li>
                        <li>@L["User_AdminPerm3"]</li>
                        <li>@L["User_AdminPerm4"]</li>
                        <li>@L["User_AdminPerm5"]</li>
                    </ul>

                    <div class="alert alert-warning mt-3 small">
                        <span class="oi oi-warning me-2"></span>
                        <strong>@L["User_SecurityTip"]：</strong>
                        <ul class="mb-0 mt-2">
                            <li>@L["User_SecurityTip1"]</li>
                            <li>@L["User_SecurityTip2"]</li>
                            <li>@L["User_SecurityTip3"]</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private CreateUserModel model = new();
    private bool isSubmitting = false;
    private string? errorMessage;

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        errorMessage = null;

        try
        {
            // 调用UserService创建用户（带角色）
            await UserService.CreateAsync(
                model.Username,
                model.Password,
                model.FullName,
                model.Role
            );

            // 创建成功，跳转到用户列表
            NavigationManager.NavigateTo("/users");
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isSubmitting = false;
        }
    }

    public class CreateUserModel
    {
        [Required(ErrorMessage = "请输入用户名")]
        [StringLength(50, MinimumLength = 3, ErrorMessage = "用户名长度必须在3-50个字符之间")]
        public string Username { get; set; } = string.Empty;

        [Required(ErrorMessage = "请输入姓名")]
        [StringLength(50, MinimumLength = 2, ErrorMessage = "姓名长度必须在2-50个字符之间")]
        public string FullName { get; set; } = string.Empty;

        [Required(ErrorMessage = "请输入密码")]
        [StringLength(6, MinimumLength = 4, ErrorMessage = "密码长度必须在4-6个字符之间")]
        public string Password { get; set; } = string.Empty;

        [Required(ErrorMessage = "请确认密码")]
        [Compare(nameof(Password), ErrorMessage = "两次输入的密码不一致")]
        public string ConfirmPassword { get; set; } = string.Empty;

        [Required(ErrorMessage = "请选择用户角色")]
        public UserRole Role { get; set; } = UserRole.Operator;
    }
}
