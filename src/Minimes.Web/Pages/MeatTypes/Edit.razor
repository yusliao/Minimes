@page "/meattypes/edit/{id:int}"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "Admin")]
@using Microsoft.Extensions.Localization
@using Minimes.Application.Interfaces
@using Minimes.Application.DTOs.MeatType
@using Minimes.Application.Resources
@inject IStringLocalizer<SharedResource> L
@inject IMeatTypeService MeatTypeService
@inject NavigationManager Navigation

<PageTitle>@L["MeatTypes_EditTitle"] - MiniMES</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>
                <span class="oi oi-pencil me-2"></span>@L["MeatTypes_EditTitle"]
            </h2>
            <p class="text-muted">@L["MeatTypes_EditDescription"]</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">@L["Status_Loading"]</span>
            </div>
            <p class="text-muted mt-2">@L["MeatTypes_LoadingInfo"]</p>
        </div>
    }
    else if (meatType == null)
    {
        <div class="alert alert-warning">
            <strong>@L["Message_Warning"]</strong>@L["MeatTypes_NotFoundMessage"]
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <EditForm Model="@request" OnValidSubmit="HandleSubmit">
                            <DataAnnotationsValidator />

                            <!-- 类型代码（只读） -->
                            <div class="mb-3">
                                <label class="form-label">
                                    <strong>@L["MeatTypes_CodeLabel"]</strong>
                                </label>
                                <input type="text" class="form-control" value="@meatType.Code" readonly disabled />
                                <small class="text-muted">@L["MeatTypes_CodeReadonly"]</small>
                            </div>

                            <!-- 类型名称 -->
                            <div class="mb-3">
                                <label class="form-label">
                                    <strong>@L["MeatTypes_NameLabel"]</strong> <span class="text-danger">*</span>
                                </label>
                                <InputText class="form-control" @bind-Value="request.Name" />
                                <ValidationMessage For="@(() => request.Name)" />
                            </div>

                            <!-- 显示顺序 -->
                            <div class="mb-3">
                                <label class="form-label">
                                    <strong>@L["MeatTypes_SortOrderLabel"]</strong> <span class="text-danger">*</span>
                                </label>
                                <InputNumber class="form-control" @bind-Value="request.DisplayOrder" />
                                <ValidationMessage For="@(() => request.DisplayOrder)" />
                                <small class="text-muted">@L["MeatTypes_SortOrderHint"]</small>
                            </div>

                            <!-- 激活状态 -->
                            <div class="mb-3 form-check">
                                <InputCheckbox class="form-check-input" @bind-Value="request.IsActive" id="isActive" />
                                <label class="form-check-label" for="isActive">
                                    @L["MeatTypes_ActiveLabel"]
                                </label>
                                <div><small class="text-muted">@L["MeatTypes_EditActiveHint"]</small></div>
                            </div>

                            <!-- 描述说明 -->
                            <div class="mb-3">
                                <label class="form-label">
                                    <strong>@L["MeatTypes_DescriptionLabel"]</strong>
                                </label>
                                <InputTextArea class="form-control" @bind-Value="request.Description" rows="3" />
                                <ValidationMessage For="@(() => request.Description)" />
                            </div>

                            <!-- 错误提示 -->
                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-danger">
                                    <strong>@L["Message_Error"]</strong>@errorMessage
                                </div>
                            }

                            <!-- 操作按钮 -->
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                    @if (isSubmitting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-1"></span>
                                    }
                                    <span class="oi oi-check me-1"></span>
                                    @L["Btn_Save"]
                                </button>
                                <button type="button" class="btn btn-outline-secondary" @onclick="Cancel">
                                    <span class="oi oi-x me-1"></span>
                                    @L["Btn_Cancel"]
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>

            <!-- 右侧信息面板 -->
            <div class="col-md-4">
                <div class="card bg-light mb-3">
                    <div class="card-body">
                        <h6 class="card-title">
                            <span class="oi oi-info me-1"></span>@L["MeatTypes_InfoTitle"]
                        </h6>
                        <ul class="list-unstyled small mb-0">
                            <li><strong>@L["MeatTypes_CodeLabel"]：</strong><code>@meatType.Code</code></li>
                            <li><strong>@L["MeatTypes_CreatedAtLabel"]：</strong>@meatType.CreatedAt.ToString("yyyy-MM-dd HH:mm")</li>
                            @if (meatType.UpdatedAt.HasValue)
                            {
                                <li><strong>@L["MeatTypes_UpdatedAtLabel"]：</strong>@meatType.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm")</li>
                            }
                        </ul>
                    </div>
                </div>

                <div class="card bg-light">
                    <div class="card-body">
                        <h6 class="card-title">
                            <span class="oi oi-lightbulb me-1"></span>@L["MeatTypes_EditGuideTitle"]
                        </h6>
                        <ul class="small mb-0">
                            <li>@L["MeatTypes_EditGuide1"]</li>
                            <li>@L["MeatTypes_EditGuide2"]</li>
                            <li>@L["MeatTypes_EditGuide3"]</li>
                            <li>@L["MeatTypes_EditGuide4"]</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private MeatTypeResponse? meatType;
    private UpdateMeatTypeRequest request = new();
    private bool isLoading = false;
    private bool isSubmitting = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadMeatType();
    }

    private async Task LoadMeatType()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            meatType = await MeatTypeService.GetByIdAsync(Id);
            if (meatType != null)
            {
                // 填充表单数据
                request.Name = meatType.Name;
                request.DisplayOrder = meatType.DisplayOrder;
                request.IsActive = meatType.IsActive;
                request.Description = meatType.Description;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"{L["MeatTypes_LoadFailed"].Value}{ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        errorMessage = null;

        try
        {
            await MeatTypeService.UpdateAsync(Id, request);
            Navigation.NavigateTo("/meattypes");
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/meattypes");
    }
}
