@page "/meattypes/edit/{id:int}"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "Admin")]
@using Minimes.Application.Interfaces
@using Minimes.Application.DTOs.MeatType
@inject IMeatTypeService MeatTypeService
@inject NavigationManager Navigation

<PageTitle>编辑肉类类型 - MiniMES</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>
                <span class="oi oi-pencil me-2"></span>编辑肉类类型
            </h2>
            <p class="text-muted">修改肉类类型信息</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">加载中...</span>
            </div>
            <p class="text-muted mt-2">加载类型信息...</p>
        </div>
    }
    else if (meatType == null)
    {
        <div class="alert alert-warning">
            <strong>提示：</strong>未找到指定的肉类类型
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <EditForm Model="@request" OnValidSubmit="HandleSubmit">
                            <DataAnnotationsValidator />

                            <!-- 类型代码（只读） -->
                            <div class="mb-3">
                                <label class="form-label">
                                    <strong>类型代码</strong>
                                </label>
                                <input type="text" class="form-control" value="@meatType.Code" readonly disabled />
                                <small class="text-muted">类型代码创建后不可修改</small>
                            </div>

                            <!-- 类型名称 -->
                            <div class="mb-3">
                                <label class="form-label">
                                    <strong>类型名称</strong> <span class="text-danger">*</span>
                                </label>
                                <InputText class="form-control" @bind-Value="request.Name" />
                                <ValidationMessage For="@(() => request.Name)" />
                            </div>

                            <!-- 显示顺序 -->
                            <div class="mb-3">
                                <label class="form-label">
                                    <strong>显示顺序</strong> <span class="text-danger">*</span>
                                </label>
                                <InputNumber class="form-control" @bind-Value="request.DisplayOrder" />
                                <ValidationMessage For="@(() => request.DisplayOrder)" />
                                <small class="text-muted">数字越小越靠前</small>
                            </div>

                            <!-- 激活状态 -->
                            <div class="mb-3 form-check">
                                <InputCheckbox class="form-check-input" @bind-Value="request.IsActive" id="isActive" />
                                <label class="form-check-label" for="isActive">
                                    激活此类型
                                </label>
                                <div><small class="text-muted">停用后，该类型将不能在系统中使用</small></div>
                            </div>

                            <!-- 描述说明 -->
                            <div class="mb-3">
                                <label class="form-label">
                                    <strong>描述说明</strong>
                                </label>
                                <InputTextArea class="form-control" @bind-Value="request.Description" rows="3" />
                                <ValidationMessage For="@(() => request.Description)" />
                            </div>

                            <!-- 错误提示 -->
                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-danger">
                                    <strong>错误：</strong>@errorMessage
                                </div>
                            }

                            <!-- 操作按钮 -->
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                    @if (isSubmitting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-1"></span>
                                    }
                                    <span class="oi oi-check me-1"></span>
                                    保存
                                </button>
                                <button type="button" class="btn btn-outline-secondary" @onclick="Cancel">
                                    <span class="oi oi-x me-1"></span>
                                    取消
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>

            <!-- 右侧信息面板 -->
            <div class="col-md-4">
                <div class="card bg-light mb-3">
                    <div class="card-body">
                        <h6 class="card-title">
                            <span class="oi oi-info me-1"></span>类型信息
                        </h6>
                        <ul class="list-unstyled small mb-0">
                            <li><strong>类型代码：</strong><code>@meatType.Code</code></li>
                            <li><strong>创建时间：</strong>@meatType.CreatedAt.ToString("yyyy-MM-dd HH:mm")</li>
                            @if (meatType.UpdatedAt.HasValue)
                            {
                                <li><strong>更新时间：</strong>@meatType.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm")</li>
                            }
                        </ul>
                    </div>
                </div>

                <div class="card bg-light">
                    <div class="card-body">
                        <h6 class="card-title">
                            <span class="oi oi-lightbulb me-1"></span>编辑说明
                        </h6>
                        <ul class="small mb-0">
                            <li><strong>类型代码</strong>不可修改，确保数据一致性</li>
                            <li>修改<strong>类型名称</strong>会影响所有使用该类型的地方</li>
                            <li>调整<strong>显示顺序</strong>可以改变列表中的排列位置</li>
                            <li>停用类型不会删除数据，只是暂时不可用</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private MeatTypeResponse? meatType;
    private UpdateMeatTypeRequest request = new();
    private bool isLoading = false;
    private bool isSubmitting = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadMeatType();
    }

    private async Task LoadMeatType()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            meatType = await MeatTypeService.GetByIdAsync(Id);
            if (meatType != null)
            {
                // 填充表单数据
                request.Name = meatType.Name;
                request.DisplayOrder = meatType.DisplayOrder;
                request.IsActive = meatType.IsActive;
                request.Description = meatType.Description;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"加载肉类类型信息失败：{ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        errorMessage = null;

        try
        {
            await MeatTypeService.UpdateAsync(Id, request);
            Navigation.NavigateTo("/meattypes");
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/meattypes");
    }
}
