@page "/meattypes/create"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "Admin")]
@using Minimes.Application.Interfaces
@using Minimes.Application.DTOs.MeatType
@inject IMeatTypeService MeatTypeService
@inject NavigationManager Navigation

<PageTitle>新增肉类类型 - MiniMES</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>
                <span class="oi oi-plus me-2"></span>新增肉类类型
            </h2>
            <p class="text-muted">创建新的生肉分类</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <EditForm Model="@request" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />

                        <!-- 类型代码 -->
                        <div class="mb-3">
                            <label class="form-label">
                                <strong>类型代码</strong> <span class="text-danger">*</span>
                            </label>
                            <InputText class="form-control" @bind-Value="request.Code" placeholder="如：PORK" />
                            <ValidationMessage For="@(() => request.Code)" />
                            <small class="text-muted">类型的唯一标识，建议使用大写英文字母</small>
                        </div>

                        <!-- 类型名称 -->
                        <div class="mb-3">
                            <label class="form-label">
                                <strong>类型名称</strong> <span class="text-danger">*</span>
                            </label>
                            <InputText class="form-control" @bind-Value="request.Name" placeholder="如：猪肉" />
                            <ValidationMessage For="@(() => request.Name)" />
                        </div>

                        <!-- 显示顺序 -->
                        <div class="mb-3">
                            <label class="form-label">
                                <strong>显示顺序</strong> <span class="text-danger">*</span>
                            </label>
                            <InputNumber class="form-control" @bind-Value="request.DisplayOrder" />
                            <ValidationMessage For="@(() => request.DisplayOrder)" />
                            <small class="text-muted">数字越小越靠前</small>
                        </div>

                        <!-- 是否激活 -->
                        <div class="mb-3 form-check">
                            <InputCheckbox class="form-check-input" @bind-Value="request.IsActive" id="isActive" />
                            <label class="form-check-label" for="isActive">
                                激活此类型
                            </label>
                            <div><small class="text-muted">勾选后，该类型可以在系统中使用</small></div>
                        </div>

                        <!-- 描述说明 -->
                        <div class="mb-3">
                            <label class="form-label">
                                <strong>描述说明</strong>
                            </label>
                            <InputTextArea class="form-control" @bind-Value="request.Description" rows="3" placeholder="类型的详细说明..." />
                            <ValidationMessage For="@(() => request.Description)" />
                        </div>

                        <!-- 错误提示 -->
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">
                                <strong>错误：</strong>@errorMessage
                            </div>
                        }

                        <!-- 操作按钮 -->
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                }
                                <span class="oi oi-check me-1"></span>
                                保存
                            </button>
                            <button type="button" class="btn btn-outline-secondary" @onclick="Cancel">
                                <span class="oi oi-x me-1"></span>
                                取消
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>

        <!-- 右侧提示面板 -->
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h6 class="card-title">
                        <span class="oi oi-info me-1"></span>填写说明
                    </h6>
                    <ul class="small mb-0">
                        <li><strong>类型代码</strong>：必须唯一，建议使用大写英文字母，如：PORK（猪肉）、BEEF（牛肉）、MUTTON（羊肉）</li>
                        <li><strong>类型名称</strong>：显示给用户的名称，如：猪肉、牛肉、羊肉、鸡肉、鸭肉、鱼肉</li>
                        <li><strong>显示顺序</strong>：控制类型在列表中的排列顺序，数字越小越靠前</li>
                        <li><strong>激活状态</strong>：只有激活的类型才能在系统中使用</li>
                        <li><strong>描述说明</strong>：可选，用于补充说明该类型的详细信息</li>
                    </ul>
                </div>
            </div>

            <div class="card bg-light mt-3">
                <div class="card-body">
                    <h6 class="card-title">
                        <span class="oi oi-lightbulb me-1"></span>常见肉类类型
                    </h6>
                    <ul class="small mb-0">
                        <li>PORK - 猪肉</li>
                        <li>BEEF - 牛肉</li>
                        <li>MUTTON - 羊肉</li>
                        <li>CHICKEN - 鸡肉</li>
                        <li>DUCK - 鸭肉</li>
                        <li>FISH - 鱼肉</li>
                        <li>SEAFOOD - 海鲜</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private CreateMeatTypeRequest request = new()
    {
        DisplayOrder = 1,
        IsActive = true
    };

    private bool isSubmitting = false;
    private string? errorMessage;

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        errorMessage = null;

        try
        {
            await MeatTypeService.CreateAsync(request);
            Navigation.NavigateTo("/meattypes");
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/meattypes");
    }
}
