@page "/meattypes/create"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "Admin")]
@using Microsoft.Extensions.Localization
@using Minimes.Application.Interfaces
@using Minimes.Application.DTOs.MeatType
@using Minimes.Application.Resources
@inject IStringLocalizer<SharedResource> L
@inject IMeatTypeService MeatTypeService
@inject NavigationManager Navigation

<PageTitle>@L["MeatTypes_CreateTitle"] - MiniMES</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>
                <span class="oi oi-plus me-2"></span>@L["MeatTypes_CreateTitle"]
            </h2>
            <p class="text-muted">@L["MeatTypes_CreateDescription"]</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <EditForm Model="@request" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />

                        <!-- 类型代码 -->
                        <div class="mb-3">
                            <label class="form-label">
                                <strong>@L["MeatTypes_CodeLabel"]</strong> <span class="text-danger">*</span>
                            </label>
                            <InputText class="form-control" @bind-Value="request.Code" placeholder="@L["MeatTypes_CodePlaceholder"]" />
                            <ValidationMessage For="@(() => request.Code)" />
                            <small class="text-muted">@L["MeatTypes_CodeHint"]</small>
                        </div>

                        <!-- 类型名称 -->
                        <div class="mb-3">
                            <label class="form-label">
                                <strong>@L["MeatTypes_NameLabel"]</strong> <span class="text-danger">*</span>
                            </label>
                            <InputText class="form-control" @bind-Value="request.Name" placeholder="@L["MeatTypes_NamePlaceholder"]" />
                            <ValidationMessage For="@(() => request.Name)" />
                        </div>

                        <!-- 显示顺序 -->
                        <div class="mb-3">
                            <label class="form-label">
                                <strong>@L["MeatTypes_SortOrderLabel"]</strong> <span class="text-danger">*</span>
                            </label>
                            <InputNumber class="form-control" @bind-Value="request.DisplayOrder" />
                            <ValidationMessage For="@(() => request.DisplayOrder)" />
                            <small class="text-muted">@L["MeatTypes_SortOrderHint"]</small>
                        </div>

                        <!-- 是否激活 -->
                        <div class="mb-3 form-check">
                            <InputCheckbox class="form-check-input" @bind-Value="request.IsActive" id="isActive" />
                            <label class="form-check-label" for="isActive">
                                @L["MeatTypes_ActiveLabel"]
                            </label>
                            <div><small class="text-muted">@L["MeatTypes_ActiveHint"]</small></div>
                        </div>

                        <!-- 描述说明 -->
                        <div class="mb-3">
                            <label class="form-label">
                                <strong>@L["MeatTypes_DescriptionLabel"]</strong>
                            </label>
                            <InputTextArea class="form-control" @bind-Value="request.Description" rows="3" placeholder="@L["MeatTypes_DescriptionPlaceholder"]" />
                            <ValidationMessage For="@(() => request.Description)" />
                        </div>

                        <!-- 错误提示 -->
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">
                                <strong>@L["Message_Error"]</strong>@errorMessage
                            </div>
                        }

                        <!-- 操作按钮 -->
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                }
                                <span class="oi oi-check me-1"></span>
                                @L["Btn_Save"]
                            </button>
                            <button type="button" class="btn btn-outline-secondary" @onclick="Cancel">
                                <span class="oi oi-x me-1"></span>
                                @L["Btn_Cancel"]
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>

        <!-- 右侧提示面板 -->
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h6 class="card-title">
                        <span class="oi oi-info me-1"></span>@L["MeatTypes_FormGuideTitle"]
                    </h6>
                    <ul class="small mb-0">
                        <li>@L["MeatTypes_FormGuideCode"]</li>
                        <li>@L["MeatTypes_FormGuideName"]</li>
                        <li>@L["MeatTypes_FormGuideSortOrder"]</li>
                        <li>@L["MeatTypes_FormGuideActive"]</li>
                        <li>@L["MeatTypes_FormGuideDescription"]</li>
                    </ul>
                </div>
            </div>

            <div class="card bg-light mt-3">
                <div class="card-body">
                    <h6 class="card-title">
                        <span class="oi oi-lightbulb me-1"></span>@L["MeatTypes_CommonTypesTitle"]
                    </h6>
                    <ul class="small mb-0">
                        <li>@L["MeatTypes_CommonType1"]</li>
                        <li>@L["MeatTypes_CommonType2"]</li>
                        <li>@L["MeatTypes_CommonType3"]</li>
                        <li>@L["MeatTypes_CommonType4"]</li>
                        <li>@L["MeatTypes_CommonType5"]</li>
                        <li>@L["MeatTypes_CommonType6"]</li>
                        <li>@L["MeatTypes_CommonType7"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private CreateMeatTypeRequest request = new()
    {
        DisplayOrder = 1,
        IsActive = true
    };

    private bool isSubmitting = false;
    private string? errorMessage;

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        errorMessage = null;

        try
        {
            await MeatTypeService.CreateAsync(request);
            Navigation.NavigateTo("/meattypes");
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/meattypes");
    }
}
