@page "/meattypes"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "Admin")]
@using Microsoft.Extensions.Localization
@using Minimes.Application.Interfaces
@using Minimes.Application.DTOs.MeatType
@using Minimes.Application.Resources
@inject IStringLocalizer<SharedResource> L
@inject IMeatTypeService MeatTypeService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>@L["MeatTypes_Title"] - MiniMES</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>
                <span class="oi oi-list-rich me-2"></span>@L["MeatTypes_Title"]
            </h2>
            <p class="text-muted">@L["MeatTypes_Description"]</p>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" @onclick="NavigateToCreate">
                <span class="oi oi-plus me-1"></span>@L["MeatTypes_AddNew"]
            </button>
        </div>
    </div>

    <!-- 统计信息 -->
    @if (meatTypes.Any())
    {
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h6 class="text-muted">@L["MeatTypes_TotalCount"]</h6>
                        <h3>@meatTypes.Count</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h6 class="text-muted">@L["MeatTypes_ActiveCount"]</h6>
                        <h3 class="text-success">@meatTypes.Count(m => m.IsActive)</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h6 class="text-muted">@L["MeatTypes_InactiveCount"]</h6>
                        <h3 class="text-secondary">@meatTypes.Count(m => !m.IsActive)</h3>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- 肉类类型列表 -->
    <div class="card">
        <div class="card-body">
            @if (isLoading)
            {
                <p class="text-center text-muted">@L["Status_Loading"]</p>
            }
            else if (!meatTypes.Any())
            {
                <p class="text-center text-muted">@L["MeatTypes_NoData"]</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>@L["MeatTypes_SortOrder"]</th>
                                <th>@L["MeatTypes_Code"]</th>
                                <th>@L["MeatTypes_Name"]</th>
                                <th>@L["MeatTypes_Description"]</th>
                                <th>@L["MeatTypes_Status"]</th>
                                <th>@L["MeatTypes_CreatedAt"]</th>
                                <th>@L["MeatTypes_Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var meatType in meatTypes.OrderBy(m => m.DisplayOrder))
                            {
                                <tr>
                                    <td>@meatType.DisplayOrder</td>
                                    <td><code>@meatType.Code</code></td>
                                    <td><strong>@meatType.Name</strong></td>
                                    <td>@(string.IsNullOrEmpty(meatType.Description) ? "-" : meatType.Description)</td>
                                    <td>
                                        @if (meatType.IsActive)
                                        {
                                            <span class="badge bg-success">@L["Status_Active"]</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@L["Status_Inactive"]</span>
                                        }
                                    </td>
                                    <td>@meatType.CreatedAt.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-primary" @onclick="() => NavigateToEdit(meatType.Id)"
                                                    title="@L["MeatTypes_Edit"]">
                                                <span class="oi oi-pencil"></span>
                                            </button>
                                            <button class="btn btn-outline-info" @onclick="() => RegenerateQRCodes(meatType.Id)"
                                                    title="@L["MeatTypes_RegenerateQRCodes"]">
                                                <span class="oi oi-reload"></span>
                                            </button>
                                            <button class="btn @(meatType.IsActive ? "btn-outline-warning" : "btn-outline-success")"
                                                    @onclick="() => ToggleActive(meatType.Id)"
                                                    title="@L[meatType.IsActive ? "MeatTypes_Deactivate" : "MeatTypes_Activate"]">
                                                <span class="oi @(meatType.IsActive ? "oi-ban" : "oi-check")"></span>
                                            </button>
                                            <button class="btn btn-outline-danger"
                                                    @onclick="() => DeleteMeatType(meatType.Id)"
                                                    title="@L["MeatTypes_Delete"]">
                                                <span class="oi oi-trash"></span>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger mt-3">
            <strong>@L["Message_Error"]</strong>@errorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success mt-3">
            <strong>@L["Message_Success"]</strong>@successMessage
        </div>
    }
</div>

@code {
    private List<MeatTypeResponse> meatTypes = new();
    private bool isLoading = false;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadMeatTypes();
    }

    private async Task LoadMeatTypes()
    {
        isLoading = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            meatTypes = await MeatTypeService.GetAllAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"{L["MeatTypes_LoadFailed"].Value}{ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/meattypes/create");
    }

    private void NavigateToEdit(int id)
    {
        Navigation.NavigateTo($"/meattypes/edit/{id}");
    }

    private async Task ToggleActive(int id)
    {
        try
        {
            var success = await MeatTypeService.ToggleActiveAsync(id);
            if (success)
            {
                successMessage = L["MeatTypes_StatusUpdated"].Value;
                await LoadMeatTypes();
            }
            else
            {
                errorMessage = L["MeatTypes_UpdateStatusFailed"].Value;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"{L["MeatTypes_OperationFailed"].Value}{ex.Message}";
        }
    }

    private async Task DeleteMeatType(int id)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", L["MeatTypes_ConfirmDelete"].Value))
        {
            return;
        }

        try
        {
            var success = await MeatTypeService.DeleteAsync(id);
            if (success)
            {
                successMessage = L["MeatTypes_Deleted"].Value;
                await LoadMeatTypes();
            }
            else
            {
                errorMessage = L["MeatTypes_DeleteFailed"].Value;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"{L["MeatTypes_DeleteFailed"].Value}: {ex.Message}";
        }
    }

    private async Task RegenerateQRCodes(int id)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", L["MeatTypes_ConfirmRegenerate"].Value))
        {
            return;
        }

        try
        {
            var count = await MeatTypeService.RegenerateQRCodesAsync(id);
            successMessage = string.Format(L["MeatTypes_RegenerateSuccess"].Value, count);
            await LoadMeatTypes();
        }
        catch (Exception ex)
        {
            errorMessage = $"{L["MeatTypes_RegenerateFailed"].Value}: {ex.Message}";
        }
    }
}
