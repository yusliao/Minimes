@page "/employees/edit/{id:int}"
@using Microsoft.Extensions.Localization
@using Minimes.Application.Interfaces
@using Minimes.Application.DTOs.Employee
@using Minimes.Application.Resources
@inject IStringLocalizer<SharedResource> L
@inject IEmployeeService EmployeeService
@inject NavigationManager NavigationManager
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "Admin")]

<PageTitle>@L["Employee_Edit"] - MiniMES</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>
                <span class="oi oi-pencil me-2"></span>@L["Employee_Edit"]
            </h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/employees">@L["Employee_List"]</a></li>
                    <li class="breadcrumb-item active">@L["Employee_Edit"]</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">@L["Status_Loading"]</span>
            </div>
            <p class="mt-2 text-muted">加载员工数据中...</p>
        </div>
    }
    else if (employee == null)
    {
        <div class="alert alert-danger">
            <span class="oi oi-warning me-2"></span>
            @L["Employee_NotFound"]
        </div>
        <div class="mt-3">
            <button class="btn btn-secondary" @onclick="BackToList">
                <span class="oi oi-arrow-left me-1"></span>返回列表
            </button>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12 col-lg-8">
                <div class="card">
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <span class="oi oi-warning me-2"></span>@errorMessage
                                <button type="button" class="btn-close" @onclick="ClearError"></button>
                            </div>
                        }

                        <EditForm Model="request" OnValidSubmit="HandleSubmit">
                            <DataAnnotationsValidator />

                            <div class="mb-3">
                                <label class="form-label">
                                    <strong>@L["Employee_Code"] *</strong>
                                    <span class="badge bg-secondary ms-2">只读</span>
                                </label>
                                <input type="text" class="form-control" value="@employee.Code" disabled />
                                <small class="form-text text-muted">
                                    员工编码不可修改，用于生成二维码
                                </small>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">
                                    <strong>@L["Employee_Name"] *</strong>
                                </label>
                                <input type="text" class="form-control form-control-lg" @bind="request.Name" required />
                                <ValidationMessage For="@(() => request.Name)" />
                            </div>

                            <div class="row">
                                <div class="col-12 col-md-6 mb-3">
                                    <label class="form-label">@L["Employee_ContactPerson"]</label>
                                    <input type="text" class="form-control" @bind="request.ContactPerson" />
                                    <ValidationMessage For="@(() => request.ContactPerson)" />
                                </div>

                                <div class="col-12 col-md-6 mb-3">
                                    <label class="form-label">@L["Employee_Phone"]</label>
                                    <input type="tel" class="form-control" @bind="request.Phone" />
                                    <ValidationMessage For="@(() => request.Phone)" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">@L["Employee_Address"]</label>
                                <textarea class="form-control" @bind="request.Address" rows="3"></textarea>
                                <ValidationMessage For="@(() => request.Address)" />
                            </div>

                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="isActive" @bind="request.IsActive" />
                                <label class="form-check-label" for="isActive">
                                    激活状态
                                </label>
                                @if (!request.IsActive && employee.QRCodeCount > 0)
                                {
                                    <div class="alert alert-warning mt-2 mb-0">
                                        <small>
                                            <span class="oi oi-warning me-1"></span>
                                            @L["Employee_DeactivateConfirm"]
                                        </small>
                                    </div>
                                }
                            </div>

                            <hr class="my-4" />

                            <div class="d-flex justify-content-between">
                                <button type="button" class="btn btn-outline-secondary btn-lg" @onclick="Cancel">
                                    <span class="oi oi-x me-1"></span>@L["Btn_Cancel"]
                                </button>
                                <button type="submit" class="btn btn-primary btn-lg" disabled="@isSaving">
                                    @if (isSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-1"></span>
                                        <span>保存中...</span>
                                    }
                                    else
                                    {
                                        <span class="oi oi-check me-1"></span>
                                        <span>@L["Btn_Save"]</span>
                                    }
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>

                <!-- 员工信息卡片 -->
                <div class="card mt-3">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <span class="oi oi-info me-2"></span>员工信息
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6 col-md-3">
                                <div class="text-muted small">创建时间</div>
                                <div><strong>@employee.CreatedAt.ToString("yyyy-MM-dd HH:mm")</strong></div>
                            </div>
                            <div class="col-6 col-md-3">
                                <div class="text-muted small">更新时间</div>
                                <div><strong>@(employee.UpdatedAt?.ToString("yyyy-MM-dd HH:mm") ?? "从未更新")</strong></div>
                            </div>
                            <div class="col-6 col-md-3 mt-2 mt-md-0">
                                <div class="text-muted small">@L["Employee_QRCodeCount"]</div>
                                <div><strong><span class="badge bg-info">@employee.QRCodeCount</span></strong></div>
                            </div>
                            <div class="col-6 col-md-3 mt-2 mt-md-0">
                                <div class="text-muted small">@L["Employee_Status"]</div>
                                <div>
                                    @if (employee.IsActive)
                                    {
                                        <span class="badge bg-success">@L["Employee_Active"]</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@L["Employee_Inactive"]</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 右侧帮助信息 -->
            <div class="col-12 col-lg-4 mt-3 mt-lg-0">
                <div class="card bg-light">
                    <div class="card-body">
                        <h5 class="card-title">
                            <span class="oi oi-info me-2"></span>编辑说明
                        </h5>
                        <ul class="mb-0">
                            <li class="mb-2">
                                <strong>@L["Employee_Code"]</strong>：不可修改
                            </li>
                            <li class="mb-2">
                                <strong>@L["Employee_Name"]</strong>：@L["Common_Required"]
                            </li>
                            <li class="mb-2">
                                <strong>@L["Employee_ContactPerson"]</strong>：@L["Common_Optional"]
                            </li>
                            <li class="mb-2">
                                <strong>@L["Employee_Phone"]</strong>：@L["Common_Optional"]
                            </li>
                        </ul>

                        <div class="alert alert-warning mt-3 mb-0">
                            <small>
                                <span class="oi oi-warning me-1"></span>
                                停用员工会自动停用该员工的所有二维码
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private EmployeeResponse? employee;
    private UpdateEmployeeRequest request = new();
    private bool isLoading = true;
    private bool isSaving = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadEmployee();
    }

    private async Task LoadEmployee()
    {
        isLoading = true;
        try
        {
            employee = await EmployeeService.GetByIdAsync(Id);
            if (employee != null)
            {
                // 填充表单数据
                request = new UpdateEmployeeRequest
                {
                    Id = employee.Id,
                    Code = employee.Code,
                    Name = employee.Name,
                    ContactPerson = employee.ContactPerson,
                    Phone = employee.Phone,
                    Address = employee.Address,
                    IsActive = employee.IsActive
                };
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"加载失败: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        isSaving = true;
        errorMessage = null;

        try
        {
            await EmployeeService.UpdateAsync(request);
            NavigationManager.NavigateTo("/employees");
        }
        catch (Exception ex)
        {
            errorMessage = $"保存失败: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/employees");
    }

    private void BackToList()
    {
        NavigationManager.NavigateTo("/employees");
    }

    private void ClearError()
    {
        errorMessage = null;
    }
}
