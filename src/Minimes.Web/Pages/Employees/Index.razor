@page "/employees"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "Admin")]
@using Microsoft.Extensions.Localization
@using Minimes.Application.Interfaces
@using Minimes.Application.DTOs.Employee
@using Minimes.Application.Resources
@using Microsoft.JSInterop
@inject IStringLocalizer<SharedResource> L
@inject IEmployeeService EmployeeService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<PageTitle>@L["Employee_List"] - MiniMES</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>
                <span class="oi oi-person me-2"></span>@L["Employee_List"]
            </h2>
            <p class="text-muted">@L["Nav_Employees"]</p>
        </div>
    </div>

    <!-- 搜索和操作栏 -->
    <div class="row mb-3">
        <div class="col-md-8">
            <div class="input-group">
                <span class="input-group-text">
                    <span class="oi oi-magnifying-glass"></span>
                </span>
                <input type="text" class="form-control" placeholder="搜索员工编码、姓名、联系人或电话"
                       @bind="searchKeyword" @bind:event="oninput" />
                <button class="btn btn-outline-secondary" @onclick="HandleSearch">
                    @L["Btn_Search"]
                </button>
                <button class="btn btn-outline-secondary" @onclick="ClearSearch">
                    @L["Btn_Clear"]
                </button>
            </div>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-primary" @onclick="NavigateToCreate">
                <span class="oi oi-plus me-1"></span>@L["Employee_Create"]
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">@L["Status_Loading"]</span>
            </div>
            <p class="mt-2 text-muted">加载员工数据中...</p>
        </div>
    }
    else if (employees == null || !employees.Any())
    {
        <div class="alert alert-info text-center py-5">
            <span class="oi oi-info me-2"></span>
            暂无员工数据
        </div>
    }
    else
    {
        <!-- 员工列表表格 -->
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th width="5%">ID</th>
                        <th width="10%">@L["Employee_Code"]</th>
                        <th width="12%">@L["Employee_Name"]</th>
                        <th width="10%">@L["Employee_ContactPerson"]</th>
                        <th width="12%">@L["Employee_Phone"]</th>
                        <th width="18%">@L["Employee_Address"]</th>
                        <th width="8%">@L["Employee_QRCodeCount"]</th>
                        <th width="10%">@L["Employee_Status"]</th>
                        <th width="15%">@L["Records_Action"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in filteredEmployees)
                    {
                        <tr class="@(employee.IsActive ? "" : "table-secondary")">
                            <td>@employee.Id</td>
                            <td><code>@employee.Code</code></td>
                            <td><strong>@employee.Name</strong></td>
                            <td>@employee.ContactPerson</td>
                            <td>@employee.Phone</td>
                            <td>@employee.Address</td>
                            <td>
                                <span class="badge bg-info">@employee.QRCodeCount</span>
                            </td>
                            <td>
                                @if (employee.IsActive)
                                {
                                    <span class="badge bg-success">@L["Employee_Active"]</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@L["Employee_Inactive"]</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary me-1" @onclick="() => NavigateToEdit(employee.Id)">
                                    <span class="oi oi-pencil"></span>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteEmployee(employee.Id)">
                                    <span class="oi oi-trash"></span>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- 统计信息 -->
        <div class="row mt-3">
            <div class="col">
                <small class="text-muted">
                    共 @filteredEmployees.Count() 条记录
                </small>
            </div>
        </div>
    }
</div>

@code {
    private List<EmployeeResponse>? employees;
    private string searchKeyword = string.Empty;
    private bool isLoading = true;

    private IEnumerable<EmployeeResponse> filteredEmployees
    {
        get
        {
            if (employees == null) return Enumerable.Empty<EmployeeResponse>();

            var result = employees.AsEnumerable();

            if (!string.IsNullOrWhiteSpace(searchKeyword))
            {
                var keyword = searchKeyword.ToLower();
                result = result.Where(e =>
                    e.Code.ToLower().Contains(keyword) ||
                    e.Name.ToLower().Contains(keyword) ||
                    (e.ContactPerson != null && e.ContactPerson.ToLower().Contains(keyword)) ||
                    (e.Phone != null && e.Phone.Contains(keyword))
                );
            }

            return result.OrderByDescending(e => e.CreatedAt);
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadEmployees();
    }

    private async Task LoadEmployees()
    {
        isLoading = true;
        try
        {
            employees = (await EmployeeService.GetAllAsync()).ToList();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void HandleSearch()
    {
        StateHasChanged();
    }

    private void ClearSearch()
    {
        searchKeyword = string.Empty;
        StateHasChanged();
    }

    private void NavigateToCreate()
    {
        NavigationManager.NavigateTo("/employees/create");
    }

    private void NavigateToEdit(int id)
    {
        NavigationManager.NavigateTo($"/employees/edit/{id}");
    }

    private async Task DeleteEmployee(int id)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", L["Employee_DeleteConfirm"].Value))
        {
            return;
        }

        await EmployeeService.DeleteAsync(id);
        await LoadEmployees();
    }
}
