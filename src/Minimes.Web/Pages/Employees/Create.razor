@page "/employees/create"
@using Microsoft.Extensions.Localization
@using Minimes.Application.Interfaces
@using Minimes.Application.DTOs.Employee
@using Minimes.Application.Resources
@inject IStringLocalizer<SharedResource> L
@inject IEmployeeService EmployeeService
@inject NavigationManager NavigationManager
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy = "Admin")]

<PageTitle>@L["Employee_Create"] - MiniMES</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>
                <span class="oi oi-plus me-2"></span>@L["Employee_Create"]
            </h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/employees">@L["Employee_List"]</a></li>
                    <li class="breadcrumb-item active">@L["Employee_Create"]</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-lg-8">
            <div class="card">
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <span class="oi oi-warning me-2"></span>@errorMessage
                            <button type="button" class="btn-close" @onclick="ClearError"></button>
                        </div>
                    }

                    <EditForm Model="request" OnValidSubmit="HandleSubmit">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label class="form-label">
                                <strong>@L["Employee_Code"] *</strong>
                                <small class="text-muted">（唯一标识）</small>
                            </label>
                            <input type="text" class="form-control form-control-lg" @bind="request.Code"
                                   placeholder="例如：E001" required />
                            <ValidationMessage For="@(() => request.Code)" />
                            <small class="form-text text-muted">
                                员工编码用于生成二维码，建议使用字母+数字组合
                            </small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <strong>@L["Employee_Name"] *</strong>
                            </label>
                            <input type="text" class="form-control form-control-lg" @bind="request.Name"
                                   placeholder="员工姓名" required />
                            <ValidationMessage For="@(() => request.Name)" />
                        </div>

                        <div class="row">
                            <div class="col-12 col-md-6 mb-3">
                                <label class="form-label">@L["Employee_ContactPerson"]</label>
                                <input type="text" class="form-control" @bind="request.ContactPerson"
                                       placeholder="紧急联系人" />
                                <ValidationMessage For="@(() => request.ContactPerson)" />
                            </div>

                            <div class="col-12 col-md-6 mb-3">
                                <label class="form-label">@L["Employee_Phone"]</label>
                                <input type="tel" class="form-control" @bind="request.Phone"
                                       placeholder="联系电话" />
                                <ValidationMessage For="@(() => request.Phone)" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">@L["Employee_Address"]</label>
                            <textarea class="form-control" @bind="request.Address" rows="3"
                                      placeholder="家庭住址"></textarea>
                            <ValidationMessage For="@(() => request.Address)" />
                        </div>

                        <hr class="my-4" />

                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-outline-secondary btn-lg" @onclick="Cancel">
                                <span class="oi oi-x me-1"></span>@L["Btn_Cancel"]
                            </button>
                            <button type="submit" class="btn btn-primary btn-lg" disabled="@isSaving">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                    <span>保存中...</span>
                                }
                                else
                                {
                                    <span class="oi oi-check me-1"></span>
                                    <span>@L["Btn_Save"]</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>

        <!-- 右侧帮助信息 -->
        <div class="col-12 col-lg-4 mt-3 mt-lg-0">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title">
                        <span class="oi oi-info me-2"></span>填写说明
                    </h5>
                    <ul class="mb-0">
                        <li class="mb-2">
                            <strong>@L["Employee_Code"]</strong>：@L["Common_Required"]
                        </li>
                        <li class="mb-2">
                            <strong>@L["Employee_Name"]</strong>：@L["Common_Required"]
                        </li>
                        <li class="mb-2">
                            <strong>@L["Employee_ContactPerson"]</strong>：@L["Common_Optional"]
                        </li>
                        <li class="mb-2">
                            <strong>@L["Employee_Phone"]</strong>：@L["Common_Optional"]
                        </li>
                        <li class="mb-2">
                            <strong>@L["Employee_Address"]</strong>：@L["Common_Optional"]
                        </li>
                    </ul>

                    <div class="alert alert-info mt-3 mb-0">
                        <small>
                            <span class="oi oi-lightbulb me-1"></span>
                            创建员工后，系统会自动为该员工生成对应的二维码
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private CreateEmployeeRequest request = new();
    private bool isSaving = false;
    private string? errorMessage;

    private async Task HandleSubmit()
    {
        isSaving = true;
        errorMessage = null;

        try
        {
            await EmployeeService.CreateAsync(request);
            NavigationManager.NavigateTo("/employees");
        }
        catch (Exception ex)
        {
            errorMessage = $"保存失败: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/employees");
    }

    private void ClearError()
    {
        errorMessage = null;
    }
}
