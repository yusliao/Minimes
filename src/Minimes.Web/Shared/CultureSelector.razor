@using System.Globalization
@inject NavigationManager Navigation

<div class="culture-selector">
    <select class="form-select form-select-sm"
            id="cultureSelect"
            onchange="window.location.href='/Culture/Set?culture=' + this.value + '&returnUrl=' + encodeURIComponent(window.location.pathname)">
        <option value="zh-CN" selected="@(currentCulture.StartsWith("zh"))">简体中文</option>
        <option value="en-US" selected="@(currentCulture.StartsWith("en"))">English</option>
    </select>
</div>

@code {
    private string currentCulture = CultureInfo.CurrentUICulture.Name;
}
